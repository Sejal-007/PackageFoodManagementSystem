@model IEnumerable<PackageFoodManagementSystem.Repository.Models.Product>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/menu.js"></script>

    <script>
        /**
         * core function to handle AJAX cart updates
         */
        function updateCart(productId, action, quantityElement) {
            $.ajax({
                url: '/Cart/' + action,
                type: 'POST',
                // Critical for [FromBody] binding in C#
                contentType: 'application/json; charset=utf-8',
                // Ensures data is sent as a proper JSON string
                data: JSON.stringify({ productId: parseInt(productId) }),
                success: function (response) {
                    if (response.success) {
                        // 1. Update the quantity number on the product card
                        quantityElement.text(response.newQty);

                        // 2. Update the navbar cart badge count
                        const badge = $('#cart-badge');
                        badge.text(response.cartCount);

                        // 3. Toggle visibility: show badge if count > 0, otherwise hide it
                        if (response.cartCount > 0) {
                            badge.css('display', 'inline-block');
                        } else {
                            badge.css('display', 'none');
                        }
                    }
                },
                error: function (xhr) {
                    // Better error feedback based on status
                    if (xhr.status === 401) {
                        alert("Please log in first to manage your cart.");
                    } else {
                        alert("Something went wrong. Please check your connection or login status.");
                    }
                }
            });
        }

}

        /**
         * Event Listeners for Plus and Minus buttons
         */
        $(document).ready(function () {
            // Handle Plus Button Click
            $(document).on('click', '.btn-plus', function () {
                const productId = $(this).data('id');
                const qtySpan = $(`#qty-${productId}`);
                updateCart(productId, 'Add', qtySpan);
            });

            // Handle Minus Button Click
            $(document).on('click', '.btn-minus', function () {
                const productId = $(this).data('id');
                const qtySpan = $(`#qty-${productId}`);
                const currentQty = parseInt(qtySpan.text());

                // Prevent sending requests if the quantity is already 0
                if (currentQty > 0) {
                    updateCart(productId, 'Decrease', qtySpan);
                }
            });
        });
    </script>
}

