@model IEnumerable<PackageFoodManagementSystem.Repository.Models.Product>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/menu.js"></script>

    <script>
                function updateCart(productId, action, quantityElement) {
            $.ajax({
                url: `/Cart/${action}`, // Ensure this points to your [Route("Cart")]
                type: 'POST',
                // This header is required for [FromBody] to work correctly
                contentType: 'application/json; charset=utf-8',
                // Data must be a JSON string and key name must match your DTO property
                data: JSON.stringify({ productId: parseInt(productId) }),
                success: function (response) {
                    if (response.success) {
                        // Update product card quantity
                        quantityElement.text(response.newQty);
                        // Update navbar badge
                        $('#cart-badge').text(response.cartCount).show();
                    }
                },
                error: function (xhr) {
                    // Handle 401 Unauthorized if not logged in
                    if(xhr.status === 401) {
                        alert("Please log in first.");
                    } else {
                        alert("An error occurred.");
                    }
                }
            });
        }

        // Button click handlers
        $(document).on('click', '.btn-plus', function () {
            const productId = $(this).data('id');
            const qtySpan = $(`#qty-${productId}`);
            updateCart(productId, 'Add', qtySpan);
        });

        $(document).on('click', '.btn-minus', function () {
            const productId = $(this).data('id');
            const qtySpan = $(`#qty-${productId}`);
            const currentQty = parseInt(qtySpan.text());

            if (currentQty > 0) {
                updateCart(productId, 'Decrease', qtySpan);
            }
        });
    </script>
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Our <span style="color: #FF6B00;">Menu</span></h2>

        <div class="d-flex flex-wrap justify-content-center gap-2 mt-3">
            <a asp-action="Index" asp-route-category=""
               class="btn @(string.IsNullOrEmpty(ViewBag.SelectedCategory) ? "btn-dark" : "btn-outline-dark") rounded-pill">All</a>

            <a asp-action="Index" asp-route-category="Vegetables and Fruits"
               class="btn @(ViewBag.SelectedCategory == "Vegetables and Fruits" ? "btn-warning" : "btn-outline-secondary") rounded-pill">Veg & Fruits</a>

            <a asp-action="Index" asp-route-category="Dairy and Eggs"
               class="btn @(ViewBag.SelectedCategory == "Dairy and Eggs" ? "btn-warning" : "btn-outline-secondary") rounded-pill">Dairy & Eggs</a>

            <a asp-action="Index" asp-route-category="Snacks and Drinks"
               class="btn @(ViewBag.SelectedCategory == "Snacks and Drinks" ? "btn-warning" : "btn-outline-secondary") rounded-pill">Snacks & Drinks</a>

            <a asp-action="Index" asp-route-category="Meat and Seafoods"
               class="btn @(ViewBag.SelectedCategory == "Meat and Seafoods" ? "btn-warning" : "btn-outline-secondary") rounded-pill">Meat & Fish</a>
        </div>
    </div>
</div>

<div class="container py-5">
    @if (ViewBag.CurrentCategory != null)
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3>Showing: <span class="text-orange">@ViewBag.CurrentCategory</span></h3>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Show All Products</a>
        </div>
    }

    <div class="row g-4 justify-content-center">
        @foreach (var item in Model)
        {
            @if (item.IsActive)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm mx-auto p-2" style="max-width: 280px; border-radius: 20px;">

                        <div class="overflow-hidden mb-2" style="height: 160px; border-radius: 15px;">
                            <img src="@(string.IsNullOrEmpty(item.ImageData) ? "/images/default-food.png" : item.ImageData)"
                                 class="w-100 h-100"
                                 style="object-fit: cover;"
                                 alt="@item.ProductName">
                        </div>

                        <div class="card-body text-center p-2">
                            <small class="text-muted text-uppercase mb-1 d-block" style="font-size: 0.7rem;">
                                @item.Category
                            </small>
                            <h6 class="fw-bold mb-1">@item.ProductName</h6>
                            <p class="text-success fw-bold mb-2">₹@item.Price</p>

                            <button class="btn btn-orange text-white mb-2 w-100 rounded-pill"
                                    data-name="@item.ProductName"
                                    data-price="@item.Price"
                                    data-image="@(string.IsNullOrEmpty(item.ImageData) ? "/images/default-food.png" : item.ImageData)"
                                    data-bs-toggle="modal"
                                    data-bs-target="#productModal">
                                View Details
                            </button>

                            <div class="d-flex justify-content-center mb-2">
                                <div class="d-flex align-items-center bg-light rounded-pill px-2 py-1 border">
                                    @* MINUS BUTTON *@
                                    <button class="btn btn-sm text-success p-0 btn-minus"
                                            onclick="decrease(this)"
                                            data-id="@item.ProductId">
                                        <i class="fa fa-minus-circle fa-lg"></i>
                                    </button>

                                    @* QUANTITY DISPLAY *@
                                    <span class="mx-3 fw-bold qty"
                                          id="qty-@item.ProductId"
                                          data-product-id="@item.ProductId">0</span>

                                    @* PLUS BUTTON *@
                                    <button class="btn btn-sm text-success p-0 btn-plus"
                                            onclick="increase(this)"
                                            data-id="@item.ProductId">
                                        <i class="fa fa-plus-circle fa-lg"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@* Modal code remains same as provided in original *@
<div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow" style="border-radius: 15px;">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="modalProductName"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalProductImage" src="" class="img-fluid rounded mb-3 shadow-sm" style="max-height: 250px; width: 100%; object-fit: cover; border-radius: 15px;" alt="Product">
                <p id="modalProductDesc" class="text-muted px-3"></p>
                <h4 id="modalProductPrice" class="fw-bold text-orange"></h4>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .text-orange {
        color: #FF6B00;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .btn-orange {
        background-color: #FF6B00;
        border: none;
    }

        .btn-orange:hover {
            background-color: #e66000;
            color: white;
        }
</style>