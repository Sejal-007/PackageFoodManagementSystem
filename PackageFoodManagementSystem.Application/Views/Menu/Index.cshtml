@model IEnumerable<PackageFoodManagementSystem.Repository.Models.Product>
@section Scripts {
    <script src="~/js/menu.js"></script>

    @* JavaScript to handle Modal Data Population *@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const productModal = document.getElementById('productModal');
            if (productModal) {
                productModal.addEventListener('show.bs.modal', function (event) {
                    // Button that triggered the modal
                    const button = event.relatedTarget;

                    // Extract info from data-* attributes
                    const name = button.getAttribute('data-name');
                    const desc = button.getAttribute('data-desc');
                    const price = button.getAttribute('data-price');
                    const image = button.getAttribute('data-image');

                    // Update the modal's content
                    document.getElementById('modalProductName').textContent = name;
                    document.getElementById('modalProductDesc').textContent = desc || "No description available.";
                    document.getElementById('modalProductPrice').textContent = "₹" + price;
                    document.getElementById('modalProductImage').src = image || "/images/default-food.png";
                });
            }
        });
    </script>
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Our <span style="color: #FF6B00;">Menu</span></h2>

        <div class="d-flex flex-wrap justify-content-center gap-2 mt-3">
            <a asp-action="Index" asp-route-category=""
               class="btn @(string.IsNullOrEmpty(ViewBag.SelectedCategory) ? "btn-dark" : "btn-outline-dark") rounded-pill">All</a>

            <a asp-action="Index" asp-route-category="Vegetables and Fruits"
               class="btn @(ViewBag.SelectedCategory == "Vegetables and Fruits" ? "btn-warning" : "btn-outline-secondary") rounded-pill">Veg & Fruits</a>

            <a asp-action="Index" asp-route-category="Dairy and Eggs"
               class="btn @(ViewBag.SelectedCategory == "Dairy and Eggs" ? "btn-warning" : "btn-outline-secondary") rounded-pill">Dairy & Eggs</a>

            <a asp-action="Index" asp-route-category="Snacks and Drinks"
               class="btn @(ViewBag.SelectedCategory == "Snacks and Drinks" ? "btn-warning" : "btn-outline-secondary") rounded-pill">Snacks & Drinks</a>

            <a asp-action="Index" asp-route-category="Meat and Seafoods"
               class="btn @(ViewBag.SelectedCategory == "Meat and Seafoods" ? "btn-warning" : "btn-outline-secondary") rounded-pill">Meat & Fish</a>
        </div>
    </div>
</div>

<div class="container py-5">
    @if (ViewBag.CurrentCategory != null)
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3>Showing: <span class="text-orange">@ViewBag.CurrentCategory</span></h3>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Show All Products</a>
        </div>
    }

    <div class="row g-4 justify-content-center">
        @foreach (var item in Model)
        {
            @if (item.IsActive)
            {
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm mx-auto p-2"
                         style="max-width: 280px; border-radius: 20px;"
                         data-id="@item.ProductId"
                         data-name="@item.ProductName"
                         data-price="@item.Price">

                        <div class="overflow-hidden mb-2" style="height: 160px; border-radius: 15px;">
                            @if (!string.IsNullOrEmpty(item.ImageData))
                            {
                                <img src="@item.ImageData"
                                     class="w-100 h-100"
                                     style="object-fit: cover;"
                                     alt="@item.ProductName">
                            }
                            else
                            {
                                <img src="~/images/default-food.png"
                                     class="w-100 h-100"
                                     style="object-fit: cover;"
                                     alt="No Image">
                            }
                        </div>

                        <div class="card-body text-center p-2">
                            <small class="text-muted text-uppercase mb-1 d-block" style="font-size: 0.7rem;">
                                @item.Category
                            </small>
                            <h6 class="fw-bold mb-1">@item.ProductName</h6>
                            <p class="text-success fw-bold mb-2">₹@item.Price</p>

                            @* --- Updated View Details Button --- *@
                            <button class="btn btn-orange text-white view-details-btn mb-2 w-100 rounded-pill"
                                    data-name="@item.ProductName"
                                    @* data-desc="@item.Description" *@
                                    data-price="@item.Price"
                                    data-image="@(string.IsNullOrEmpty(item.ImageData) ? "/images/default-food.png" : item.ImageData)"
                                    data-bs-toggle="modal"
                                    data-bs-target="#productModal">
                                View Details
                            </button>

                            <div class="d-flex justify-content-center mb-2">
                                <div class="d-flex align-items-center bg-light rounded-pill p-1 border">
                                    <button class="btn btn-sm btn-success rounded-circle d-flex align-items-center justify-content-center"
                                            style="width: 28px; height: 28px;"
                                            onclick="decrease(this)">
                                        <i class="fa fa-minus small" style="font-size: 10px;"></i>
                                    </button>

                                    <span class="qty fw-bold px-3" data-product-id="@item.ProductId" style="font-size: 14px;">0</span>

                                    <button class="btn btn-sm btn-success rounded-circle d-flex align-items-center justify-content-center"
                                            style="width: 28px; height: 28px;"
                                            onclick="increase(this)">
                                        <i class="fa fa-plus small" style="font-size: 10px;"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@* --- Product Details Modal --- *@
<div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow" style="border-radius: 15px;">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold" id="modalProductName"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalProductImage" src="" class="img-fluid rounded mb-3 shadow-sm" style="max-height: 250px; width: 100%; object-fit: cover; border-radius: 15px;" alt="Product">
                <p id="modalProductDesc" class="text-muted px-3"></p>
                <h4 id="modalProductPrice" class="fw-bold text-orange"></h4>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .text-orange {
        color: #FF6B00;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .btn-orange {
        background-color: #FF6B00;
        border: none;
        transition: background-color 0.2s;
    }

        .btn-orange:hover {
            background-color: #e66000;
            color: white;
        }

    .modal-content {
        overflow: hidden;
    }
</style>