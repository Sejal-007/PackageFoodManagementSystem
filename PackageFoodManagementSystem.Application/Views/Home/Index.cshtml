@{

    ViewData["Title"] = "Alwayzzz Fresh | Home";

}

<div class="hero-container position-relative overflow-hidden" style="background: linear-gradient(135deg, #FF6B00 0%, #FF8533 100%); padding-top: 80px; min-height: 75vh;">
    <div class="container">
        <div class="row align-items-center py-5">
            <div class="col-lg-6 mb-5 mb-lg-0 text-white">
                <div class="badge rounded-pill bg-white text-orange px-3 py-2 mb-4 animate__animated animate__fadeInDown">
                    <i class="fa-solid fa-truck-fast me-2"></i>
                </div>

                <h1 class="display-3 fw-800 mb-4 animate__animated animate__fadeInLeft text-white">

                    Stay <span>Fresh</span>,<br>

                    Shop <span class="opacity-75">Smarter</span>.
                </h1>

                <p class="lead mb-5 animate__animated animate__fadeInLeft animate__delay-1s text-white opacity-90">

                    Your daily essentials delivered within minutes. From storage to serving, we keep your food fresh effortlessly.
                </p>

                <div class="d-flex gap-3 animate__animated animate__fadeInUp animate__delay-2s">
                    <a asp-controller="Menu" asp-action="Index" class="btn btn-white btn-lg rounded-pill px-5 shadow-lg fw-bold">

                        Explore Now <i class="fa-solid fa-compass ms-2"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-6 position-relative text-center animate__animated animate__zoomIn">
                <div class="white-glow-bg"></div>
                <img src="~/images/splash-white.png"
                     class="splash-bg"
                     alt="Splash Background"
                     style="position: absolute;

                z-index: 1;

                max-width: none;

                transform: scale(1.2); /* Increases overall size */

                pointer-events: none;">

                <img src="~/images/homeimg.png"
                     class="img-fluid floating-img"
                     alt="Fresh Produce"
                     style="position: relative; z-index: 2; max-height: 520px; filter: drop-shadow(0 20px 40px rgba(0,0,0,0.2));">
            </div>
        </div>
    </div>

    <div class="wave-bottom">
        <svg viewBox="0 0 1440 120"><path fill="#ffffff" fill-opacity="1" d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,48C1120,43,1280,53,1360,58.7L1440,64L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path></svg>
    </div>
</div>

<div class="container my-5 pt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">What's <span class="text-orange">Fresh</span> Today?</h2>
        <p class="text-muted">Hand-picked essentials for your kitchen</p>
    </div>

    <div class="row g-4 text-center mb-4">
        <div class="col-6 col-md-3">
            <a asp-controller="Menu" asp-action="Index" asp-route-category="Veg & Fruits" class="text-decoration-none text-dark">
            <div class="category-card p-4 rounded-4 shadow-sm h-100 border-0">
                <div class="icon-circle mb-3 mx-auto bg-orange-light"><i class="fa-solid fa-leaf text-orange fs-2"></i></div>
                <h6 class="fw-bold">Veg & Fruits</h6>
            </div>
            </a>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Menu" asp-action="Index" asp-route-category="Dairy & Eggs" class="text-decoration-none text-dark">
            <div class="category-card p-4 rounded-4 shadow-sm h-100 border-0">
                <div class="icon-circle mb-3 mx-auto bg-blue-light"><i class="fa-solid fa-cow text-primary fs-2"></i></div>
                <h6 class="fw-bold">Dairy & Eggs</h6>
            </div>
            </a>
        </div>
        <div class="col-6 col-md-3">
                        <a asp-controller="Menu" asp-action="Index" asp-route-category="Snacks & Drinks" class="text-decoration-none text-dark">

            <div class="category-card p-4 rounded-4 shadow-sm h-100 border-0">
                <div class="icon-circle mb-3 mx-auto bg-purple-light"><i class="fa-solid fa-bottle-water text-purple fs-2"></i></div>
                <h6 class="fw-bold">Snacks & Drinks</h6>
            </div>
            </a>
        </div>

        <div class="col-6 col-md-3">
            <a asp-controller="Menu" asp-action="Index" asp-route-category="Meat & Fish" class="text-decoration-none text-dark">
            <div class="category-card p-4 rounded-4 shadow-sm h-100 border-0">
                <div class="icon-circle mb-3 mx-auto bg-meat-light"><i class="fa-solid fa-drumstick-bite text-brown fs-2"></i></div>
                <h6 class="fw-bold">Meat & Fish</h6>
            </div>
            </a>
        </div>

    </div>


</div>

<div class="container py-5 my-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold">Experience <span class="text-orange">Freshness</span> in 3 Steps</h2>
    </div>
    <div class="row g-5 text-center">
        <div class="col-md-4">
            <div class="step-card">
                <div class="step-number">1</div>
                <div class="icon-box-large shadow-sm mb-4">
                    <i class="fa-solid fa-mobile-screen-button text-orange"></i>
                </div>
                <h5 class="fw-bold">Pick Essentials</h5>
                <p class="text-muted">Browse your favorites easily.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="step-card">
                <div class="step-number">2</div>
                <div class="icon-box-large shadow-sm mb-4">
                    <i class="fa-solid fa-credit-card text-orange"></i>
                </div>
                <h5 class="fw-bold">Secure Checkout</h5>
                <p class="text-muted">Safe payments via UPI, Card, or Cash.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="step-card">
                <div class="step-number">3</div>
                <div class="icon-box-large shadow-sm mb-4">
                    <i class="fa-solid fa-person-biking text-orange"></i>
                </div>
                <h5 class="fw-bold">Flash Delivery</h5>
                <p class="text-muted">30-minute delivery straight to your door.</p>
            </div>
        </div>
    </div>
    <br />
    <div class="bg-light py-5">
        <div class="container py-4">
            <div class="row g-4 text-center">
                <div class="col-md-3">
                    <div class="trust-card p-3">
                        <i class="fa-solid fa-clock-rotate-left text-orange fs-1 mb-3"></i>
                        <h6 class="fw-bold">On-Time Delivery</h6>
                        <p class="small text-muted mb-0">15-minute delivery or we make it right.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="trust-card p-3">
                        <i class="fa-solid fa-shield-heart text-orange fs-1 mb-3"></i>
                        <h6 class="fw-bold">Quality Assured</h6>
                        <p class="small text-muted mb-0">Directly from farms to your kitchen.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="trust-card p-3">
                        <i class="fa-solid fa-hand-holding-dollar text-orange fs-1 mb-3"></i>
                        <h6 class="fw-bold">Best Prices</h6>
                        <p class="small text-muted mb-0">Daily deals and smart savings every day.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="trust-card p-3">
                        <i class="fa-solid fa-headset text-orange fs-1 mb-3"></i>
                        <h6 class="fw-bold">24/7 Support</h6>
                        <p class="small text-muted mb-0">We're here to help whenever you need us.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["SuccessMessage"] != null)

{
    <script>

        alert('@TempData["SuccessMessage"]');
    </script>

}

<style>

    :root {
        --brand-orange: #FF6B00;
        --brand-yellow: #FFA500;
    }

    .text-orange {
        color: var(--brand-orange) !important;
    }

    .bg-orange-light {
        background: #FFF5EE;
    }

    .fw-800 {
        font-weight: 800;
    }

    /* ⚪ BUTTON STYLES */

    .btn-white {
        background: white;
        color: var(--brand-orange) !important;
        border: none;
        transition: 0.3s;
    }

        .btn-white:hover {
            background: #f8f9fa;
            transform: translateY(-3px);
        }

    /* 🟠 DECORATIONS */

    .white-glow-bg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px;
        height: 400px;
        background: white;
        filter: blur(100px);
        opacity: 0.2;
        z-index: -1;
    }

    .wave-bottom {
        position: absolute;
        bottom: -1px;
        width: 100%;
        line-height: 0;
    }

    .category-card {
        background: white;
        transition: 0.3s;
        cursor: pointer;
    }

        .category-card:hover {
            background: var(--brand-orange);
            color: white !important;
            transform: translateY(-10px);
        }

            .category-card:hover i {
                color: white !important;
            }

    .icon-circle, .icon-box-large {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-box-large {
        width: 100px;
        height: 100px;
        background: white;
        margin: 0 auto;
    }

    .step-card {
        position: relative;
    }

    .step-number {
        position: absolute;
        top: -10px;
        right: 25%;
        background: var(--brand-orange);
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        border: 3px solid white;
    }

    .floating-img {
        animation: float 6s ease-in-out infinite;
    }

    @@keyframes float {

        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    /* Category Colors */

    .bg-blue-light {
        background: #e7f1ff;
    }

    .bg-purple-light {
        background: #f3e5f5;
    }

    .bg-green-light {
        background: #e8f5e9;
    }

    .bg-yellow-light {
        background: #fff9e6;
    }

    .bg-red-light {
        background: #ffebee;
    }

    .bg-meat-light {
        background: #efebe9;
    }

    .bg-pink-light {
        background: #fce4ec;
    }
</style>

