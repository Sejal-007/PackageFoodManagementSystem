@{
    ViewData["Title"] = "Customer Home";
}

@section Styles {
    <link href="~/css/customer-home.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/customer-home.js" asp-append-version="true"></script>
}

<section class="hero">
    <div class="row align-items-center g-0">
        <div class="col-lg-6 text-start ps-5">
            <p class="hero-text text-start">
                From storage to serving,<br>
                to keep your food fresh!!<br>
                We make it effortless
            </p>
            <a class="btn custom-btn btn-lg mt-3 px-4" asp-controller="Menu" asp-action="Index">
                Explore Menu
            </a>
        </div>

        <div class="col-lg-6 text-end">
            <div class="hero-image-wrapper">
                <img src="~/images/splash-white.png" class="splash-bg" alt="Splash">
                <img src="~/images/homeimg.png" class="img-fluid hero-image" alt="Food">
            </div>
        </div>
    </div>
</section>

<div class="container mt-5 mb-5">
    <h2 class="mb-4">Explore Our Menu</h2>
    <div class="row g-4" id="menuGrid">
        <div class="col-md-3">
            <div class="card menu-card text-center p-4">
                <h5>🥨 Snacks</h5>
                <p>Crispy &amp; delicious</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card menu-card text-center p-4">
                <h5>🥤 Beverages</h5>
                <p>Cool &amp; refreshing</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card menu-card text-center p-4">
                <h5>🍱 Ready Meals</h5>
                <p>Instant &amp; tasty</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card menu-card text-center p-4">
                <h5>🍫 Sweets</h5>
                <p>Sweet happiness</p>
            </div>
        </div>
    </div>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert('@TempData["SuccessMessage"]');
    </script>
}

<style>
    :root {
        --brand-orange: #FF6B00;
        --brand-yellow: #FFA500;
    }

    .text-orange {
        color: var(--brand-orange) !important;
    }

    .bg-orange-light {
        background: #FFF5EE;
    }

    .fw-800 {
        font-weight: 800;
    }

    /* ⚪ BUTTON STYLES */
    .btn-white {
        background: white;
        color: var(--brand-orange) !important;
        border: none;
        transition: 0.3s;
    }

        .btn-white:hover {
            background: #f8f9fa;
            transform: translateY(-3px);
        }

    /* 🟠 DECORATIONS */
    .white-glow-bg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px;
        height: 400px;
        background: white;
        filter: blur(100px);
        opacity: 0.2;
        z-index: -1;
    }

    .wave-bottom {
        position: absolute;
        bottom: -1px;
        width: 100%;
        line-height: 0;
    }

    .category-card {
        background: white;
        transition: 0.3s;
        cursor: pointer;
    }

        .category-card:hover {
            background: var(--brand-orange);
            color: white !important;
            transform: translateY(-10px);
        }

            .category-card:hover i {
                color: white !important;
            }

    .icon-circle, .icon-box-large {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .icon-box-large {
        width: 100px;
        height: 100px;
        background: white;
        margin: 0 auto;
    }

    .step-card {
        position: relative;
    }

    .step-number {
        position: absolute;
        top: -10px;
        right: 25%;
        background: var(--brand-orange);
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        border: 3px solid white;
    }

    .floating-img {
        animation: float 6s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    /* Category Colors */
    .bg-blue-light {
        background: #e7f1ff;
    }

    .bg-purple-light {
        background: #f3e5f5;
    }

    .bg-green-light {
        background: #e8f5e9;
    }

    .bg-yellow-light {
        background: #fff9e6;
    }

    .bg-red-light {
        background: #ffebee;
    }

    .bg-meat-light {
        background: #efebe9;
    }

    .bg-pink-light {
        background: #fce4ec;
    }
</style>
</div>