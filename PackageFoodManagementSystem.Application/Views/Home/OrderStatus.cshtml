    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0" id="adminOrderTable">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-3">ID</th>
                        <th>Customer / Email</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Date</th>
                        <th class="text-center">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var order in Model)
                        {
                            <tr>
                                <td class="ps-3 fw-bold">#@order.OrderID</td>
                            <td>
                                <div class="fw-bold">
                                    @if (order.Customer != null)
                                    {
                                        // This pulls 'Name' from the Customer table via the relationship
                                        @order.Customer.Name
                                    }
                                    else
                                    {
                                        // This shows if the ID in the Order table doesn't exist in the Customer table
                                        <span class="text-danger">ID: @order.CustomerId (Not Found)</span>
                                    }
                                </div>
                                <div class="text-muted small">
                                    @(order.Customer?.Email ?? "No email linked")
                                </div>
                            </td>
                                <td>
                                @{

                                    var statusClass = order.OrderStatus switch

                                    {

                                        "Delivered" => "bg-success",

                                        "Cancelled" => "bg-danger",

                                        "Placed" => "bg-warning text-dark",

                                        _ => "bg-secondary"

                                    };

                                }
                                <span class="badge @statusClass p-2 shadow-sm" style="min-width: 80px;">

                                    @order.OrderStatus
                                </span>

                                </td>
                                <td class="fw-bold">₹@order.TotalAmount</td>
                                <td>@order.OrderDate?.ToString("dd-MMM-yyyy")</td>
                                <td class="text-center">
                                    <form asp-action="ProcessOrder" method="post" class="d-inline">
                                        <input type="hidden" name="orderId" value="@order.OrderID" />
                                        @if (order.OrderStatus == "Placed" || order.OrderStatus == "Confirmed")
                                        {
                                            <button name="status" value="Processing" class="btn btn-sm btn-outline-warning">Pack</button>
                                        }
                                        else if (order.OrderStatus == "Processing")
                                        {
                                            <button name="status" value="Shipped" class="btn btn-sm btn-outline-primary">Ship</button>
                                        }
                                        else if (order.OrderStatus == "Shipped")
                                        {
                                            <button name="status" value="Delivered" class="btn btn-sm btn-outline-success">Deliver</button>
                                        }
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-center py-4">No orders found.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>