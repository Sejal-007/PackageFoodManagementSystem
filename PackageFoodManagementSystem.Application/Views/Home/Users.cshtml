@model IEnumerable<PackageFoodManagementSystem.Repository.Models.UserAuthentication>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>User Management</h2>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
            <i class="bi bi-plus-circle"></i> Add User
        </button>
    </div>

    <!-- Users Table -->
    <table id="userTable" class="table table-bordered table-hover mb-0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.MobileNumber</td>
                    <td>@user.Role</td>
                    <td>
                        <!-- Edit Button -->
                        <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editUserModal-@user.Id">
                            Edit
                        </button>

                        <!-- Delete Button -->
                        <form asp-action="DeleteUser" asp-controller="Home" method="post" style="display:inline;"
                              onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Generate Edit Modals outside the table -->
@foreach (var user in Model)
{
    <div class="modal fade" id="editUserModal-@user.Id" tabindex="-1" aria-labelledby="editUserLabel-@user.Id" aria-hidden="true">
        <div class="modal-dialog">
            <form asp-action="UpdateUser" asp-controller="Home" method="post" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editUserLabel-@user.Id">Edit User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="Id" value="@user.Id" />
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" name="Name" value="@user.Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="Email" value="@user.Email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mobile Number</label>
                        <input type="text" name="MobileNumber" value="@user.MobileNumber" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <div class="password-wrapper">
                            <input type="password" id="editUserPassword-@user.Id" name="Password" placeholder="New Password (optional)" class="form-control" />
                            <button type="button"
                                    class="toggle-password"
                                    data-target="editUserPassword-@user.Id"
                                    aria-label="Show password"
                                    aria-pressed="false">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select name="Role" class="form-select" required>
                            <option value="User" selected="@(user.Role == "User")">User</option>
                            <option value="StoreManager" selected="@(user.Role == "StoreManager")"> Store Manager</option>
                            <option value="Admin" selected="@(user.Role == "Admin")">Admin</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Update User</button>
                </div>
            </form>
        </div>
    </div>
}

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="AddUser" asp-controller="Home" method="post" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserLabel">Add User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="Name" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Mobile Number</label>
                    <input type="text" name="MobileNumber" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="password-wrapper">
                        <input type="password" id="addUserPassword" name="Password" placeholder="Password" class="form-control" required />
                        <button type="button"
                                class="toggle-password"
                                data-target="addUserPassword"
                                aria-label="Show password"
                                aria-pressed="false">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <select name="Role" class="form-select" required>
                        <option value="User">User</option>
                        <option value="StoreManager">Store Manager</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save User</button>
            </div>
        </form>
    </div>
</div>



