@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="store-layout">

    <!-- ==== Main Content ==== -->
    <main class="store-content">
        <!-- Dashboard cards (responsive grid via your CSS) -->
        <section class="cards" aria-label="Dashboard metrics">
            <!-- Row 1 -->
            <article class="card">
                <div class="card-head">
                    <div class="card-title">TOTAL CUSTOMERS</div>
                </div>
                <div class="card-value">4</div>
                <div class="card-sub">Total order</div>
            </article>

            <article class="card">
                <div class="card-head">
                    <div class="card-title">ACTIVE STORES</div>
                </div>
                <div class="card-value">0</div>
                <div class="card-sub">New Order</div>
            </article>

            <article class="card">
                <div class="card-head">
                    <div class="card-title">R</div>
                </div>
                <div class="card-value">0</div>
                <div class="card-sub">TOTAL ORDERS</div>
            </article>

            <!-- Row 2 -->
            <article class="card">
                <div class="card-head">
                    <div class="card-title">PENDING ORDERS</div>
                </div>
                <div class="card-value">0</div>
                <div class="card-sub">Food being Prepared</div>
            </article>

            <article class="card">
                <div class="card-head">
                    <div class="card-title">FOOD PICKUP</div>
                </div>
                <div class="card-value">0</div>
                <div class="card-sub">Food Pickup</div>
            </article>

            @* <article class="card">
                <div class="card-head">
                    <div class="card-title">TOTAL FOOD DELIVER</div>
                </div>
                <div class="card-value">1</div>
                <div class="card-sub">Total Food Deliver</div>
            </article> *@

            <!-- Row 3 -->
            <article class="card">
                <div class="card-head">
                    <div class="card-title">CANCELLED ORDERS</div>
                </div>
                <div class="card-value">3</div>
                <div class="card-sub">Cancelled Order</div>
            </article>

            @* <article class="card">
                <div class="card-head">
                    <div class="card-title">TOTAL REGD. USER</div>
                </div>
                <div class="card-value">5</div>
                <div class="card-sub">Total Regd. User</div>
            </article> *@
        </section>
    </main>
</div>

