@{
    ViewData["Title"] = "Admin Inventory";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}





<div class="container my-4">
    <h2 class="mb-4 text-center">Inventory Management</h2>

    <!-- Inventory -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card card-summary text-center">
                <div class="card-body">
                    <h5>Total Products</h5>
                    <h3>120</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-summary text-center">
                <div class="card-body">
                    <h5>Total Stock</h5>
                    <h3>4500</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-summary text-center">
                <div class="card-body">
                    <h5>Batches</h5>
                    <h3>35</h3>
                    
                </div>
            </div>
        </div>
        <div class="col-md-3"">
            <div class="card card-summary text-center">
                <div class="card-body">
                    <h5>Out of Stock</h5>
                    <h3>8</h3>
                    
                </div>
            </div>
        </div>
    </div>

    <!-- Inventory Table -->
    <div class="card">
        <div class="card-header d-flex justify-content align-items-center">
            <h5>Inventory Details</h5>
            <button class="btn btn-primary btn-sm " data-bs-toggle="modal" data-bs-target="#addProductModal">Add Product</button>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Batch No</th>
                        <th>Quantity</th>
                        <th>Expiry Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Milk Powder</td>
                        <td>BP-101</td>
                        <td>200</td>
                        <td>2025-01-15</td>
                        <td >Going to Expire</td>
                        <td>
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editProductModal">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Chocolate Bar</td>
                        <td>CB-202</td>
                        <td>0</td>
                        <td>2024-12-01</td>
                        <td>Out of Stock</td>
                        <td>
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editProductModal">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Juice Pack</td>
                        <td>JP-303</td>
                        <td>500</td>
                        <td>2025-06-20</td>
                        <td>In Stock</td>
                        <td>
                            <button class="btn btn-sm px-2 py-1 btn-warning" data-bs-toggle="modal" data-bs-target="#editProductModal">Edit</button>
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!--add product-->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Product</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Product Name</label>
                    <input type="text" class="form-control" placeholder="Enter product name">
                </div>
                <div class="mb-3">
                    <label class="form-label">Batch No</label>
                    <input type="text" class="form-control" placeholder="Enter batch number">
                </div>
                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input type="number" class="form-control" placeholder="Enter quantity">
                </div>
                <div class="mb-3">
                    <label class="form-label">Expiry Date</label>
                    <input type="date" class="form-control">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn">Save Product</button>
            </div>
        </form>
    </div>
</div>


<!-- Add Product Modal -->
<div class="modal fade" id="editProductModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Same fields as Add Product -->
                <div class="mb-3">
                    <label class="form-label">Product Name</label>
                    <input type="text" class="form-control" value="Milk Powder">
                </div>
                <div class="mb-3">
                    <label class="form-label">Batch No</label>
                    <input type="text" class="form-control" value="BP-101">
                </div>
                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input type="number" class="form-control" value="200">
                </div>
                <div class="mb-3">
                    <label class="form-label">Expiry Date</label>
                    <input type="date" class="form-control" value="2025-01-15">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">Update Product</button>
            </div>
        </form>
    </div>
</div>
