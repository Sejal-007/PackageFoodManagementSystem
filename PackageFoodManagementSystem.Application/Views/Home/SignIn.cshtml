@using Microsoft.AspNetCore.Mvc.ModelBinding
@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<section class="page-hero"
         style="background-image: url('@Url.Content("~/Images/background.jpg")');"
         aria-label="Hero background">
    <div class="form-container form-container--elevated">
        <h2>Sign In</h2>

        <form asp-action="SignIn" asp-controller="Home" method="post">
            <!-- Email -->
            <input type="email" id="email" name="Email" placeholder="Email" required />
            <span class="error" id="emailError"></span>

            <!-- Password -->
            <div class="password-wrapper">
                <input type="password" id="password" name="Password" placeholder="Password" required />
                <button type="button"
                        class="toggle-password"
                        data-target="password"
                        aria-label="Show password"
                        aria-pressed="false">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </button>
            </div>

            <div class="validation-summary-errors" data-valmsg-summary="true">
                @foreach (var modelError in ViewData.ModelState[string.Empty]?.Errors ?? Enumerable.Empty<ModelError>())
                {
                    <span class="text-danger">@modelError.ErrorMessage</span>
                }
            </div>
            @* <span class="error" id="passwordError"></span> *@
            <span class="error"></span>

            <!-- Submit -->
            <div><button type="submit" class="btn">Sign In</button></div>
            
        </form>
    </div>
</section>

