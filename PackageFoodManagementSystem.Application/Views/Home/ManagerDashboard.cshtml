@{
    ViewBag.Title = "Store Manager Dashboard";
    Layout = "~/Views/Shared/_StoreManagerlayout.cshtml";
}

<style>
    /* Full Page Container */
    .dashboard-wrapper {
        padding: 30px;
        background-color: #fcfcfc;
        min-height: 100vh;
    }

    /* Welcome Header */
    .dashboard-header {
        margin-bottom: 40px;
        border-left: 5px solid #333;
        padding-left: 20px;
    }

        .dashboard-header h2 {
            font-weight: bold;
            font-size: 28px;
            margin-bottom: 5px;
        }

        .dashboard-header p {
            color: #666;
            font-size: 16px;
        }

    /* Card Grid */
    .action-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        margin-top: 20px;
    }

    /* Action Cards */
    .action-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #eee;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .action-card h3 {
            font-size: 20px;
            font-weight: 700;
            margin-bottom: 15px;
            color: #333;
        }

        .action-card ul {
            padding-left: 20px;
            color: #555;
            margin-bottom: 25px;
        }

            .action-card ul li {
                margin-bottom: 8px;
            }

    /* Styled Buttons */
    .btn-dashboard {
        padding: 12px 20px;
        border-radius: 10px;
        border: none;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: opacity 0.2s;
        cursor: pointer;
    }

    .btn-add {
        background-color: #d122e3; /* Matching your Add Product button */
        color: white;
    }

    .btn-update {
        background-color: #28a745; /* Matching the Active badge green */
        color: white;
    }

    .btn-dashboard:hover {
        opacity: 0.9;
        color: white;
    }

    .logout-footer {
        margin-top: 50px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .logout-link {
        color: #dc3545;
        text-decoration: none;
        font-weight: 600;
    }
</style>

<div class="dashboard-wrapper">
    <div class="dashboard-header">
        <h2>🏬 Store Manager Dashboard</h2>
        <p>Welcome back! Here is an overview of your store operations.</p>
    </div>

    <div class="action-grid">
        <div class="action-card">
            <div>
                <h3>📦 Inventory Control</h3>
                <ul>
                    <li>Real-time Stock Levels</li>
                    <li>Product Detail Updates</li>
                    <li>Expiry Date Tracking</li>
                </ul>
            </div>
            <a href="@Url.Action("AddProduct", "StoreManager1")" class="btn-dashboard btn-add">
                Go to Products
            </a>
        </div>

        <div class="action-card">
            <div>
                <h3>📝 Quick Operations</h3>
                <p class="text-muted">Perform rapid updates to your store inventory and stock counts.</p>
                <br />
            </div>
            <div class="d-grid gap-2">
                <button class="btn-dashboard btn-update">Update Inventory</button>
                <button class="btn-dashboard btn-add">Add New Category</button>
            </div>
        </div>

        <div class="action-card" style="background: #f8f9fa; border-style: dashed;">
            <div class="text-center py-4">
                <i class="fa fa-chart-line fa-3x text-muted mb-3"></i>
                <h3 class="text-muted">Analytics Coming Soon</h3>
            </div>
        </div>
    </div>

    <div class="logout-footer">
        <a href="@Url.Action("SignIn", "Home")" class="logout-link">
            <i class="fa fa-sign-out-alt"></i> Log Out
        </a>
    </div>
</div>  