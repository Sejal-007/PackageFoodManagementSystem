@{
    ViewData["Title"] = "Payment";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow p-4 text-center" style="border-radius: 25px;">
                <div class="mb-4">
                    <div class="payment-icon-circle mx-auto mb-3">
                        <i class="fa fa-shield-alt text-white"></i>
                    </div>
                    <h3 class="fw-bold">Finalize <span class="text-orange">Payment</span></h3>
                    <p class="text-muted">Order Reference: <span class="fw-bold text-dark">#@ViewBag.OrderId</span></p>
                </div>

                <form method="post" action="/Order/Success">
                    <input type="hidden" name="orderId" value="@ViewBag.OrderId" />

                    <div class="text-start mb-4">
                        <label class="form-label small fw-bold text-muted text-uppercase">Choose Payment Method</label>
                        <div class="position-relative">
                            <select class="form-select border-0 bg-light p-3 ps-5" name="paymentMethod" style="border-radius: 15px; appearance: none;">
                                <option value="COD">💵 Cash on Delivery (COD)</option>
                                <option value="UPI">📱 UPI / QR Code</option>
                                <option value="Card">💳 Credit / Debit Card</option>
                            </select>
                            <i class="fa fa-wallet position-absolute text-muted" style="left: 20px; top: 18px;"></i>
                        </div>
                    </div>

                    <div class="bg-orange-light p-3 rounded-3 mb-4 text-start">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-info-circle text-orange me-2"></i>
                            <small class="text-dark">Please ensure someone is available at the address to receive the delivery.</small>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-confirm btn-lg w-100 py-3 shadow-sm">
                        Confirm & Place Order
                    </button>

                    <a href="javascript:history.back()" class="btn btn-link text-muted mt-3 text-decoration-none small">
                        <i class="fa fa-arrow-left me-1"></i> Back to Checkout
                    </a>
                </form>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small">
                    <i class="fa fa-lock me-1"></i> SSL Encrypted & Secure Checkout
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #fcfcfc;
    }

    .text-orange {
        color: #FF6B00;
    }

    .payment-icon-circle {
        width: 70px;
        height: 70px;
        background-color: #FF6B00;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
    }

    .form-select:focus {
        box-shadow: 0 0 0 0.25rem rgba(255, 107, 0, 0.15);
        border: 1px solid #FF6B00 !important;
    }

    .bg-orange-light {
        background-color: rgba(255, 107, 0, 0.08);
    }

    .btn-confirm {
        background-color: #FF6B00;
        color: white;
        border-radius: 15px;
        font-weight: bold;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-confirm:hover {
            background-color: #e66000;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 107, 0, 0.3);
        }
</style>