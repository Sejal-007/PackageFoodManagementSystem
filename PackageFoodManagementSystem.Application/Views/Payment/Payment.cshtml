@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Payment";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/imask/6.4.3/imask.min.js"></script>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow p-4 text-center" style="border-radius: 25px;">
                <div class="mb-4">
                    <div class="payment-icon-circle mx-auto mb-3">
                        <i class="fa fa-shield-alt text-white"></i>
                    </div>
                    <h3 class="fw-bold">Finalize <span class="text-orange">Payment</span></h3>
                    <p class="text-muted">Order Reference: <span class="fw-bold text-dark">#@(ViewBag.OrderId)</span></p>
                </div>

                <form id="paymentForm" method="post" asp-controller="Payment" asp-action="Confirm">
                    <input type="hidden" name="orderId" value="@(ViewBag.OrderId)" />

                    <div class="text-start mb-4">
                        <label class="form-label small fw-bold text-muted text-uppercase">Choose Payment Method</label>
                        <div class="position-relative">
                            <select class="form-select border-0 bg-light p-3 ps-5" id="paymentMethodSelect" name="paymentMethod" style="border-radius: 15px; appearance: none;">
                                <option value="COD">💵 Cash on Delivery (COD)</option>
                                <option value="UPI">📱 UPI / QR Code</option>
                                <option value="Card">💳 Credit / Debit Card</option>
                            </select>
                            <i class="fa fa-wallet position-absolute text-muted" style="left: 20px; top: 18px;"></i>
                        </div>
                    </div>

                    <div id="upiDetails" class="payment-details text-start mb-4" style="display: none;">
                        <label class="form-label small fw-bold text-muted text-uppercase">Enter UPI ID</label>
                        <input type="text" id="upiInput" name="upiId" class="form-control border-0 bg-light p-3" placeholder="username@@bank" style="border-radius: 15px;">
                        <div class="text-danger small mt-1" id="upiError"></div>
                    </div>

                    <div id="cardDetails" class="payment-details text-start mb-4" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label small fw-bold text-muted text-uppercase">Card Number</label>
                            <input type="text" id="cardNumber" name="cardNumber" class="form-control border-0 bg-light p-3" placeholder="0000 0000 0000 0000" style="border-radius: 15px;">
                        </div>
                        <div class="row g-2">
                            <div class="col-7">
                                <label class="form-label small fw-bold text-muted text-uppercase">Expiry (MM/YY)</label>
                                <input type="text" id="expiry" name="expiry" class="form-control border-0 bg-light p-3" placeholder="MM/YY" style="border-radius: 15px;">
                            </div>
                            <div class="col-5">
                                <label class="form-label small fw-bold text-muted text-uppercase">CVV</label>
                                <input type="password" id="cvv" name="cvv" class="form-control border-0 bg-light p-3" placeholder="***" style="border-radius: 15px;">
                            </div>
                        </div>
                        <div class="text-danger small mt-2" id="cardError"></div>
                    </div>

                    <div class="bg-orange-light p-3 rounded-3 mb-4 text-start">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-info-circle text-orange me-2"></i>
                            <small id="infoText" class="text-dark">Please ensure someone is available at the address to receive the delivery.</small>
                        </div>
                    </div>
-
                    <button type="submit" id="submitBtn" class="btn btn-confirm btn-lg w-100 py-3 shadow-sm">
                        Confirm & Place Order
                    </button>

                    <a href="javascript:history.back()" class="btn btn-link text-muted mt-3 text-decoration-none small">
                        <i class="fa fa-arrow-left me-1"></i> Back to Checkout
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #fcfcfc;
    }

    .text-orange {
        color: #FF6B00;
    }

    .payment-icon-circle {
        width: 70px;
        height: 70px;
        background-color: #FF6B00;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
    }

    .form-select:focus, .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(255, 107, 0, 0.15);
        border: 1px solid #FF6B00 !important;
        background-color: #fff !important;
    }

    .bg-orange-light {
        background-color: rgba(255, 107, 0, 0.08);
    }

    .btn-confirm {
        background-color: #FF6B00;
        color: white;
        border-radius: 15px;
        font-weight: bold;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-confirm:hover {
            background-color: #e66000;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(255, 107, 0, 0.3);
        }
</style>

<script>
    const cardMask = IMask(document.getElementById('cardNumber'), { mask: '0000 0000 0000 0000' });
    const expiryMask = IMask(document.getElementById('expiry'), { mask: '00/00' });
    const cvvMask = IMask(document.getElementById('cvv'), { mask: '000' });

    const select = document.getElementById('paymentMethodSelect');
    const upiDiv = document.getElementById('upiDetails');
    const cardDiv = document.getElementById('cardDetails');
    const infoText = document.getElementById('infoText');

    select.addEventListener('change', function () {
        upiDiv.style.display = this.value === 'UPI' ? 'block' : 'none';
        cardDiv.style.display = this.value === 'Card' ? 'block' : 'none';

        if(this.value === 'UPI') infoText.innerText = "Enter your UPI ID to receive a payment request.";
        else if(this.value === 'Card') infoText.innerText = "Your card details are protected by SSL encryption.";
        else infoText.innerText = "Please ensure someone is available at the address to receive the delivery.";
    });

    document.getElementById('paymentForm').addEventListener('submit', function (e) {
        let isValid = true;
        const method = select.value;

        if (method === 'UPI') {
            const upi = document.getElementById('upiInput').value;
            // Use @@ to prevent Razor compiler errors in the script block
            if (!upi.includes('@@')) {
                document.getElementById('upiError').innerText = "Please enter a valid UPI ID (e.g. name@@bank)";
                isValid = false;
            }
        }

        if (method === 'Card') {
            const cardNo = cardMask.unmaskedValue;
            if (cardNo.length < 16) {
                document.getElementById('cardError').innerText = "Card number must be 16 digits.";
                isValid = false;
            }
        }

        if (!isValid) {
            e.preventDefault();
        } else {
            const btn = document.getElementById('submitBtn');
            btn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i> Placing Order...';
            btn.classList.add('disabled');
        }
    });
</script>