@model PackageFoodManagementSystem.Repository.Models.Cart

@{
    ViewData["Title"] = "Checkout";
    decimal subtotal = Model?.CartItems?.Sum(i => i.Quantity * i.Product.Price) ?? 0;
    decimal deliveryFee = (subtotal > 0 && subtotal < 500) ? 40 : 0;
}

<div class="container py-5">
    <div class="row g-5">
        <div class="col-md-7">
            <div class="card border-0 shadow-sm p-4" style="border-radius: 20px;">
                <h4 class="fw-bold mb-4">
                    <i class="fa fa-map-marker-alt text-orange me-2"></i>Delivery Details
                </h4>

                <form method="post" action="/Order/PlaceOrder">
                    <div class="mb-4">
                        <label class="form-label text-muted fw-bold small uppercase">Complete Delivery Address</label>
                        <textarea name="deliveryAddress"
                                  class="form-control border-0 bg-light p-3"
                                  rows="4"
                                  placeholder="Enter your house no, street name, and landmark..."
                                  required style="border-radius: 15px; resize: none;"></textarea>
                    </div>

                    <div class="alert alert-info border-0 rounded-3 small">
                        <i class="fa fa-info-circle me-2"></i>Your order will be delivered within 45-60 minutes.
                    </div>

                    <button type="submit" class="btn btn-place-order btn-lg w-100 mt-3 py-3">
                        Proceed to Payment
                    </button>
                </form>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card border-0 shadow-sm p-4 bg-white" style="border-radius: 20px;">
                <h4 class="fw-bold mb-4">Order Summary</h4>

                <div class="order-items-scroll pe-2" style="max-height: 400px; overflow-y: auto;">
                    @if (Model?.CartItems == null || !Model.CartItems.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fa fa-shopping-basket text-muted mb-2" style="font-size: 2rem;"></i>
                            <p class="text-muted">Your cart is empty</p>
                            <a href="/Home/Index" class="btn btn-sm btn-outline-dark rounded-pill">Shop Now</a>
                        </div>
                    }
                    else
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <h6 class="mb-0 fw-bold">@item.Product.ProductName</h6>
                                    <small class="text-muted">Qty: @item.Quantity × ₹@item.Product.Price</small>
                                </div>
                                <span class="fw-bold text-dark">₹@(item.Quantity* item.Product.Price)</span>
                            </div>
                        }
                    }
                </div>

                <hr class="my-4 text-muted">

                <div class="d-flex justify-content-between mb-3">
                    <span class="text-muted">Delivery Fee</span>
                    @if (deliveryFee == 0)
                    {
                        <span class="text-success fw-bold">FREE</span>
                    }
                    else
                    {
                        <span class="text-dark fw-bold">₹@deliveryFee</span>
                    }
                </div>

                <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-3 mt-2">
                    <h5 class="mb-0 fw-bold">Grand Total</h5>
                    <h4 class="mb-0 fw-bold" style="color: #FF6B00;">₹@(subtotal + deliveryFee)</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .text-orange {
        color: #FF6B00;
    }

    .form-control:focus {
        box-shadow: none;
        background-color: #f1f1f1;
        border: 1px solid #FF6B00;
    }

    .btn-place-order {
        background-color: #FF6B00;
        color: white;
        font-weight: bold;
        border-radius: 15px;
        transition: transform 0.2s, background-color 0.2s;
        border: none;
    }

        .btn-place-order:hover {
            background-color: #e66000;
            color: white;
            transform: translateY(-2px);
        }

    /* Custom Scrollbar for Order Summary */
    .order-items-scroll::-webkit-scrollbar {
        width: 5px;
    }

    .order-items-scroll::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .order-items-scroll::-webkit-scrollbar-thumb {
        background: #ddd;
        border-radius: 10px;
    }
</style>