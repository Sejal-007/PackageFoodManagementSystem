@{
	ViewData["Title"] = "Report";

	Layout = "~/Views/Shared/_StoreManagerlayout.cshtml";

}

<div class="page-container">
	<h2 class="page-title">📑 Reports</h2>
	<div class="reports-cards">
		<div class="reports-card">
			<h3>📊 Sales Report</h3>
			<p>View daily and monthly sales performance</p>
			<button class="btn-primary">View Report</button>
		</div>
		<div class="reports-card">
			<h3>📦 Inventory Report</h3>
			<p>Stock usage and product availability</p>
			<button class="btn-secondary">View Report</button>
		</div>
		<div class="reports-card">
			<h3>🛒 Order Report</h3>
			<p>Summary of completed and pending orders</p>
			<button class="btn-secondary">View Report</button>
		</div>
		<div class="reports-card">
			<h3>✔ Compliance Report</h3>
			<p>Audit and license compliance history</p>
			<button class="btn-secondary">View Report</button>
		</div>
	</div>
</div>