<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ALWAYZZZ FRESH</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --brand-orange: #FF6B00;
            --blinkit-green: #0c831f;
        }

        .text-orange {
            color: var(--brand-orange) !important;
        }

        .bg-dark {
            background-color: #1a1a1a !important;
        }

        .cursor-pointer {
            cursor: pointer;
        }

        /* Navbar & Location Styling */
        .location-box {
            border-left: 1px solid #eee;
            padding: 5px 15px;
            margin-left: 20px;
            transition: 0.2s;
            max-width: 300px;
        }

            .location-box:hover {
                background: #f8f9fa;
                border-radius: 8px;
            }

        /* Modal UI */
        .modal-content {
            border-radius: 20px;
            border: none;
            overflow: hidden;
        }

        .btn-detect {
            background-color: var(--blinkit-green);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 10px 18px;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* Search Results Styling */
        #locResultsList {
            max-height: 400px;
            overflow-y: auto;
        }

        .loc-item {
            border-bottom: 1px solid #f1f1f1;
            transition: 0.2s;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
        }

            .loc-item:hover {
                background-color: #fff9f5;
            }

        /* User Popup Styling */
        #userPopup {
            position: fixed;
            top: 75px;
            right: 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            width: 250px;
            z-index: 1060;
            display: none;
        }

        #popupOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1050;
            display: none;
            background: rgba(0,0,0,0.1);
        }

        .popup-list {
            list-style: none;
            margin: 0;
            padding: 10px;
        }

            .popup-list li {
                padding: 12px;
                border-radius: 8px;
                cursor: pointer;
                transition: 0.2s;
            }

                .popup-list li:hover {
                    background: #f8f9fa;
                    color: var(--brand-orange);
                }

        /* Footer Styling */
        .footer-links li {
            margin-bottom: 12px;
        }

        .footer-links a {
            color: rgba(255,255,255,0.6);
            text-decoration: none;
            transition: 0.3s;
        }

            .footer-links a:hover {
                color: var(--brand-orange);
                padding-left: 5px;
            }

        .social-icon-box {
            width: 38px;
            height: 38px;
            background: rgba(255,255,255,0.05);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: 0.3s;
        }

            .social-icon-box:hover {
                background: var(--brand-orange);
                transform: translateY(-3px);
            }
    </style>

    @* --- FIX: This renders the CSS from your individual pages --- *@
    @await RenderSectionAsync("Styles", required: false)

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <header class="app-header sticky-top bg-white shadow-sm">
        <nav class="navbar navbar-expand-lg px-4 py-2">
            <div class="container-fluid">
                <a class="d-flex align-items-center text-decoration-none" asp-controller="Home" asp-action="Index">
                    <img src="~/images/applogo.png" style="width:45px;" alt="Logo">
                    <span class="brand fw-bold text-orange ms-2" style="font-size: 22px;">ALWAYZZZ FRESH</span>
                </a>

                <div class="location-box d-flex align-items-center cursor-pointer me-auto" data-bs-toggle="modal" data-bs-target="#locationModal">
                    <div>
                        <div class="fw-bold lh-1 mb-1" style="font-size: 0.8rem; color: #000;">Delivery in 15 minutes</div>
                        <div class="small text-muted text-truncate" style="max-width: 180px;">
                            <span id="displayLocation">Select Location</span> <i class="fa-solid fa-caret-down ms-1"></i>
                        </div>
                    </div>
                </div>

            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Menu" asp-action="Index">Explore</a></li>

                <li class="nav-item me-4">
                    <a class="nav-link position-relative" asp-controller="User" asp-action="MyBasket">
                        <i class="fa-solid fa-cart-shopping fa-lg" style="color: #ff6347;"></i>
                        <span id="cart-count" class="badge bg-danger rounded-circle position-absolute top-0 start-100 translate-middle" style="display: none; font-size: 0.7rem;">0</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" onclick="openUserMenu()">
                        <i class="fa-solid fa-user-circle fa-2x" style="color: #ff6347;"></i>
                    </a>
                </li>
            </ul>
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Menu" asp-action="Index">Explore</a></li>
                    <li class="nav-item me-4">
                        <a class="nav-link position-relative" href="/User/MyBasket">
                            <i class="fa-solid fa-cart-shopping fs-4 text-dark"></i>
                            <span id="cart-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                0
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link cursor-pointer" onclick="openUserMenu()">
                            <i class="fa-solid fa-user-circle fa-2x text-orange"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="modal fade" id="locationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header border-0 p-4 pb-0">
                    <h5 class="modal-title fw-bold">Change Location</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <button class="btn btn-detect" onclick="detectLocation()">
                            <i class="fa-solid fa-location-crosshairs"></i> Detect my location
                        </button>
                        <div style="flex-grow: 2;">
                            <input type="text" class="loc-search-input" id="locSearch" placeholder="Search state or city..." onkeyup="searchPlaces()">
                        </div>
                    </div>
                    <div id="locResultsList" class="border rounded-4 overflow-hidden">
                        <div class="text-center p-5 text-muted">
                            <p>Search for your State or City to start your order</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="popupOverlay" onclick="closeUserMenu()"></div>
    <div id="userPopup">
        <div class="p-3 border-bottom fw-bold">User Menu</div>
        <ul class="popup-list">
            <li onclick="location.href='/User/Dashboard'"><i class="fa-solid fa-user-circle"></i> My Profile</li>
            <li onclick="location.href='/User/MyBasket'"><i class="fa-solid fa-cart-shopping"></i> My Basket</li>
            <li onclick="location.href='/User/MyOrders'"><i class="fa-solid fa-shopping-bag"></i> My Orders</li>
            <li onclick="location.href='/User/ContactUs'"><i class="fa-solid fa-headset"></i> Contact Us</li>
            <li class="logout">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Home/SignIn" style="text-decoration: none; color: inherit;">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i> Logout
                    </a>
                }
                else
                {
                    <a href="/Home/SignIn" style="text-decoration: none; color: inherit;">
                        <i class="fa-solid fa-right-to-bracket"></i> Logout
                    </a>
                }
            </li>
            <li onclick="redirectTo('/User/Dashboard')"><i class="fa-solid fa-user-circle"></i> My Profile</li>
            <li onclick="redirectTo('/User/MyBasket')"><i class="fa-solid fa-cart-shopping"></i> My Basket</li>
            <li onclick="redirectTo('/User/MyOrders')"><i class="fa-solid fa-shopping-bag"></i> My Orders</li>
            <li onclick="redirectTo('/User/ContactUs')"><i class="fa-solid fa-headset"></i> Contact Us</li>
            <li class="logout" onclick="redirectTo('/Home/SignIn')"><i class="fa-solid fa-arrow-right-from-bracket"></i> Logout</li>
            <li onclick="location.href='/User/Dashboard'"><i class="fa-solid fa-user-circle me-2"></i> My Profile</li>
            <li onclick="location.href='/User/MyBasket'"><i class="fa-solid fa-cart-shopping me-2"></i> My Basket</li>
            <li onclick="location.href='/User/MyOrders'"><i class="fa-solid fa-shopping-bag me-2"></i> My Orders</li>
            <li onclick="location.href='/User/ContactUs'"><i class="fa-solid fa-headset me-2"></i> Contact Us</li>
            <li onclick="location.href='/Home/Welcome'" class="text-danger"><i class="fa-solid fa-right-from-bracket me-2"></i> Sign Out</li>
        </ul>
    </div>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="footer-section bg-dark text-white pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row gy-4 mb-5">
                <div class="col-lg-4">
                    <h4 class="fw-bold text-orange mb-4">ALWAYZZZ FRESH</h4>
                    <p class="text-white-50 pe-lg-5">High-quality farm-fresh produce delivered in just 15 minutes.</p>
                    <div class="d-flex gap-3 mt-4">
                        <a href="#" class="social-icon-box"><i class="fa-brands fa-facebook-f"></i></a>
                        <a href="#" class="social-icon-box"><i class="fa-brands fa-instagram"></i></a>
                        <a href="#" class="social-icon-box"><i class="fa-brands fa-twitter"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-6">
                    <h6 class="fw-bold text-white mb-4">Quick Links</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Menu" asp-action="Index">Explore Menu</a></li>
                        <li><a asp-controller="User" asp-action="ContactUs">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-6">
                    <h6 class="fw-bold text-white mb-4">Stay Fresh</h6>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control bg-transparent border-secondary text-white small" placeholder="Email">
                        <button class="btn btn-orange btn-sm" type="button">Join</button>
                    </div>
                </div>
            </div>
            <hr class="border-secondary opacity-25">
            <div class="text-center">
                <p class="small text-white-50 mb-0">&copy; @DateTime.Now.Year Alwayzzz Fresh. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const indiaLocations = [
            { name: "Andhra Pradesh", sub: "State" }, { name: "Bihar", sub: "State" },
            { name: "Delhi", sub: "NCR" }, { name: "Goa", sub: "State" },
            { name: "Gujarat", sub: "State" }, { name: "Karnataka", sub: "State" },
            { name: "Kerala", sub: "State" }, { name: "Maharashtra", sub: "State" },
            { name: "Punjab", sub: "State" }, { name: "Rajasthan", sub: "State" },
            { name: "Tamil Nadu", sub: "State" }, { name: "Uttar Pradesh", sub: "State" },
            { name: "West Bengal", sub: "State" }
            /* ... Add all other states from previous list here ... */
        ];

        function searchPlaces() {
            const query = document.getElementById('locSearch').value.toLowerCase();
            const resultsBox = document.getElementById('locResultsList');
            if (!query) { resultsBox.innerHTML = '<div class="p-5 text-center text-muted">Search for your location</div>'; return; }
            const filtered = indiaLocations.filter(loc => loc.name.toLowerCase().includes(query));
            resultsBox.innerHTML = filtered.length > 0 ? filtered.map(loc => `
                <div class="loc-item" onclick="confirmLocation('${loc.name}')">
                    <i class="fa-solid fa-location-dot text-muted"></i>
                    <div><div class="fw-bold">${loc.name}</div><div class="small text-muted">${loc.sub}, India</div></div>
                </div>`).join('') : '<div class="p-4 text-center">No results found</div>';
        }

        async function detectLocation() {
            document.getElementById('displayLocation').innerText = "Finding you...";
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(async (pos) => {
                    try {
                        const res = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${pos.coords.latitude}&lon=${pos.coords.longitude}`);
                        const data = await res.json();
                        confirmLocation(data.address.city || data.address.state || "India");
                    } catch { confirmLocation("Detected Location"); }
                });
            }
        }

        function confirmLocation(name) {
            document.getElementById('displayLocation').innerText = name;
            localStorage.setItem("user_loc", name);
            bootstrap.Modal.getInstance(document.getElementById('locationModal')).hide();
        }

        function openUserMenu() { document.getElementById('userPopup').style.display = 'block'; document.getElementById('popupOverlay').style.display = 'block'; }
        function closeUserMenu() { document.getElementById('userPopup').style.display = 'none'; document.getElementById('popupOverlay').style.display = 'none'; }

        document.addEventListener("DOMContentLoaded", () => {
            const saved = localStorage.getItem("user_loc");
            if (saved) document.getElementById('displayLocation').innerText = saved;
        });
    </script>
</body>
</html>