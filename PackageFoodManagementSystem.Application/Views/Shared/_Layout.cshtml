<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ALWAYZZZ FRESH</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --brand-orange: #FF6B00;
            --blinkit-green: #0c831f;
        }

        .text-orange {
            color: var(--brand-orange) !important;
        }

        .bg-dark {
            background-color: #1a1a1a !important;
        }

        .cursor-pointer {
            cursor: pointer;
        }

        #cart-badge {
            font-size: 0.7rem;
        }

        .btn-orange:hover {
            background-color: #e66000;
            color: white;
        }

        .location-box {
            border-left: 1px solid #eee;
            padding: 5px 15px;
            margin-left: 20px;
            transition: 0.2s;
            max-width: 300px;
        }

            .location-box:hover {
                background: #f8f9fa;
                border-radius: 8px;
            }

        .loc-search-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        #userPopup {
            position: fixed;
            top: 75px;
            right: 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            width: 250px;
            z-index: 1060;
            display: none;
        }

        #popupOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1050;
            display: none;
            background: rgba(0,0,0,0.1);
        }

        .popup-list {
            list-style: none;
            margin: 0;
            padding: 10px;
        }

            .popup-list li {
                padding: 12px;
                border-radius: 8px;
                cursor: pointer;
                transition: 0.2s;
            }

                .popup-list li:hover {
                    background: #f8f9fa;
                    color: var(--brand-orange);
                }

        .footer-links li {
            margin-bottom: 12px;
        }

        .footer-links a {
            color: rgba(255,255,255,0.6);
            text-decoration: none;
            transition: 0.3s;
        }

            .footer-links a:hover {
                color: var(--brand-orange);
                padding-left: 5px;
            }

        .social-icon-box {
            width: 38px;
            height: 38px;
            background: rgba(255,255,255,0.05);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: 0.3s;
            text-decoration: none;
        }

            .social-icon-box:hover {
                background: var(--brand-orange);
                color: white;
                transform: translateY(-3px);
            }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <header class="app-header sticky-top bg-white shadow-sm">
        <nav class="navbar navbar-expand-lg px-4 py-2">
            <div class="container-fluid">
                <a class="d-flex align-items-center text-decoration-none" asp-controller="Home" asp-action="Index">
                    <img src="~/images/applogo.png" style="width:45px;" alt="Logo">
                    <span class="brand fw-bold text-orange ms-2" style="font-size: 22px;">ALWAYZZZ FRESH</span>
                </a>

                <div class="location-box d-flex align-items-center cursor-pointer me-auto" data-bs-toggle="modal" data-bs-target="#locationModal">
                    <div>
                        <div class="fw-bold lh-1 mb-1" style="font-size: 0.8rem;">Delivery in 15 minutes</div>
                        <div class="small text-muted text-truncate" style="max-width: 180px;">
                            <span id="displayLocation">Select Location</span> <i class="fa-solid fa-caret-down ms-1"></i>
                        </div>
                    </div>
                </div>

                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Menu" asp-action="Index">Explore</a></li>
                    <li class="nav-item me-4">
                        <a class="nav-link position-relative" asp-controller="Cart" asp-action="MyBasket">
                            <i class="fa-solid fa-cart-shopping fa-lg text-orange"></i>
                            <span id="cart-count" class="badge bg-danger rounded-circle position-absolute top-0 start-100 translate-middle"
                                  style="display: none; font-size: 0.7rem; min-width: 18px; height: 18px;">
                                0
                            </span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link cursor-pointer" onclick="openUserMenu()">
                            <i class="fa-solid fa-user-circle fa-2x text-orange"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    @* --- Modals & Overlays --- *@
    <div class="modal fade" id="locationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content" style="border-radius: 20px;">
                <div class="modal-header border-0 p-4 pb-0">
                    <h5 class="modal-title fw-bold">Change Location</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <button class="btn btn-success fw-bold" onclick="detectLocation()">
                            <i class="fa-solid fa-location-crosshairs"></i> Detect location
                        </button>
                        <input type="text" class="loc-search-input" id="locSearch" placeholder="Search state or city..." onkeyup="searchPlaces()">
                    </div>
                    <div id="locResultsList" class="border rounded-4 overflow-hidden" style="max-height: 400px; overflow-y: auto;">
                        <div class="text-center p-5 text-muted">Search for your State or City</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="popupOverlay" onclick="closeUserMenu()"></div>
    <div id="userPopup">
        <div class="p-3 border-bottom fw-bold text-orange d-flex justify-content-between">
            <span>User Account</span>
            <span class="cursor-pointer text-muted" onclick="closeUserMenu()">×</span>
        </div>
        <ul class="popup-list">
            <li onclick="location.href='/User/Dashboard'"><i class="fa-solid fa-user-circle"></i> My Profile</li>
            <li onclick="location.href='/Cart/MyBasket'"><i class="fa-solid fa-cart-shopping"></i> My Basket</li>
            <li onclick="location.href='/User/MyOrders'"><i class="fa-solid fa-shopping-bag"></i> My Orders</li>
            <li onclick="location.href='/User/ContactUs'"><i class="fa-solid fa-headset"></i> Contact Us</li>
            <li class="logout mt-2 border-top">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Home" asp-action="Logout"
                       style="text-decoration: none; color: inherit; display: block; padding: 5px 0;"
                       onclick="return confirm('Do you want to logout?');">
                        <i class="fa-solid fa-right-from-bracket"></i> Logout
                    </a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="SignIn"
                       style="text-decoration: none; color: inherit; display: block; padding: 5px 0;">
                        <i class="fa-solid fa-right-to-bracket"></i> Login
                    </a>
                }
            </li>
        </ul>
    </div>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white pt-5 pb-3 mt-auto">
        <div class="container">
            <div class="row gy-4 mb-5">
                <div class="col-lg-4">
                    <h4 class="fw-bold text-orange mb-4">ALWAYZZZ FRESH</h4>
                    <p class="text-white-50">High-quality farm-fresh produce delivered in just 15-30 minutes directly to your doorstep.</p>
                    <div class="d-flex gap-3 mt-4">
                        <a href="#" class="social-icon-box"><i class="fa-brands fa-facebook-f"></i></a>
                        <a href="#" class="social-icon-box"><i class="fa-brands fa-instagram"></i></a>
                        <a href="#" class="social-icon-box"><i class="fa-brands fa-twitter"></i></a>
                    </div>
                </div>
                <div class="col-lg-2">
                    <h6 class="fw-bold mb-4 text-white">Quick Links</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Menu" asp-action="Index">Explore Menu</a></li>
                        <li><a asp-controller="User" asp-action="ContactUs">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h6 class="fw-bold mb-4 text-white">Why Fresh?</h6>
                    <ul class="list-unstyled footer-links text-white-50">
                        <li><i class="fa-solid fa-check text-orange me-2"></i> 15-Min Delivery</li>
                        <li><i class="fa-solid fa-check text-orange me-2"></i> Secure Checkout</li>
                        <li><i class="fa-solid fa-check text-orange me-2"></i> Farm-to-Fork</li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h6 class="fw-bold mb-4 text-white">Stay Fresh</h6>
                    <p class="small text-white-50">Subscribe for the latest deals.</p>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control bg-transparent border-secondary text-white small" placeholder="Your Email">
                        <button class="btn btn-orange btn-sm px-3" type="button">Join</button>
                    </div>
                </div>
            </div>
            <hr class="border-secondary opacity-25">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="small text-white-50 mb-0">&copy; @DateTime.Now.Year Alwayzzz Fresh. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="payment-methods opacity-50">
                        <i class="fa-brands fa-cc-visa fs-3 mx-2"></i>
                        <i class="fa-brands fa-cc-mastercard fs-3 mx-2"></i>
                        <i class="fa-solid fa-credit-card fs-3 mx-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // CART LOGIC
        function updateCartBadge() {
            fetch('/Cart/GetTotalItems')
                .then(res => res.json())
                .then(count => {
                    const badge = document.getElementById("cart-count");
                    if (badge) {
                        badge.innerText = count;
                        badge.style.display = count > 0 ? "block" : "none";
                    }
                })
                .catch(err => console.warn("Badge sync error:", err));
        }

        // USER MENU LOGIC
        function openUserMenu() {
            document.getElementById('userPopup').style.display = 'block';
            document.getElementById('popupOverlay').style.display = 'block';
        }
        function closeUserMenu() {
            document.getElementById('userPopup').style.display = 'none';
            document.getElementById('popupOverlay').style.display = 'none';
        }

        // LOCATION LOGIC
        let searchTimeout;
        function searchPlaces() {
            const query = document.getElementById('locSearch').value;
            const resultsBox = document.getElementById('locResultsList');
            if (query.length < 3) {
                resultsBox.innerHTML = '<div class="p-5 text-center text-muted">Type at least 3 letters to search...</div>';
                return;
            }
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(async () => {
                resultsBox.innerHTML = '<div class="p-5 text-center"><div class="spinner-border text-success"></div></div>';
                try {
                    const response = await fetch(`https://nominatim.openstreetmap.org/search?format=json&countrycodes=in&q=${query}`);
                    const data = await response.json();
                    if (data.length > 0) {
                        resultsBox.innerHTML = data.map(loc => {
                            const displayName = loc.display_name.split(',').slice(0, 3).join(',');
                            return `<div class="p-3 border-bottom cursor-pointer" onclick="confirmLocation('${loc.name || displayName}')">
                                <div class="fw-bold text-dark">${loc.name || 'Location'}</div>
                                <div class="small text-muted text-truncate">${loc.display_name}</div>
                            </div>`;
                        }).join('');
                    } else {
                        resultsBox.innerHTML = '<div class="p-4 text-center">No location found in India</div>';
                    }
                } catch (error) {
                    resultsBox.innerHTML = '<div class="p-4 text-center text-danger">Search failed.</div>';
                }
            }, 500);
        }

        async function detectLocation() {
            const display = document.getElementById('displayLocation');
            const originalText = display.innerText;
            display.innerText = "Detecting...";
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(async (pos) => {
                    try {
                        const res = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${pos.coords.latitude}&lon=${pos.coords.longitude}`);
                        const data = await res.json();
                        const city = data.address.city || data.address.town || data.address.village || data.address.state || "India";
                        confirmLocation(city);
                    } catch { confirmLocation("India"); }
                }, () => {
                    alert("Please enable location permissions");
                    display.innerText = originalText;
                });
            }
        }

        function confirmLocation(name) {
            const cleanName = name.split(',')[0];
            document.getElementById('displayLocation').innerText = cleanName;
            localStorage.setItem("user_loc", cleanName);
            const modalEl = document.getElementById('locationModal');
            const modalInstance = bootstrap.Modal.getInstance(modalEl);
            if (modalInstance) modalInstance.hide();
        }

        document.addEventListener("DOMContentLoaded", () => {
            updateCartBadge();
            const saved = localStorage.getItem("user_loc");
            if (saved) document.getElementById('displayLocation').innerText = saved;
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>