<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ALWAYZZZ FRESH</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --brand-orange: #FF6B00;
        }

        .bg-dark {
            background-color: #1a1a1a !important;
        }

        .text-orange {
            color: var(--brand-orange) !important;
        }

        #cart-badge {
            font-size: 0.7rem;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="app-header">
        <nav class="navbar navbar-expand-lg px-4 py-3 shadow-sm bg-white">
            <div class="d-flex align-items-center">
                <img src="~/images/applogo.png" class="app-logo me-2" style="width:50px;" alt="Logo">
                <span class="brand fw-bold text-orange" style="font-size: 24px;">ALWAYZZZ FRESH</span>
            </div>

            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Menu" asp-action="Index">Explore</a></li>

                @* --- FIXED CART ICON SECTION --- *@
                <li class="nav-item me-4">
                    <a class="nav-link position-relative" asp-controller="Cart" asp-action="MyBasket">
                        <i class="fa-solid fa-cart-shopping fa-lg" style="color: #ff6347;"></i>
                        <span id="cart-badge"
                              class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle"
                              style="@(ViewBag.CartCount > 0 ? "display:inline-block;" : "display:none;") font-size: 0.7rem;">
                            @(ViewBag.CartCount ?? 0)
                        </span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" style="cursor: pointer;" onclick="openUserMenu()">
                        <i class="fa-solid fa-user-circle fa-2x" style="color: #ff6347;"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </header>

    @* --- User Popup Menu --- *@
    <div id="userPopup" class="user-popup">
        <div class="popup-header">
            <span>User Menu</span>
            <span class="close-btn" onclick="closeUserMenu()">×</span>
        </div>
        <ul class="popup-list">
            <li onclick="location.href='/User/Dashboard'"><i class="fa-solid fa-user-circle"></i> My Profile</li>
            <li onclick="location.href='/Cart/MyBasket'"><i class="fa-solid fa-cart-shopping"></i> My Basket</li>
            <li onclick="location.href='/User/MyOrders'"><i class="fa-solid fa-shopping-bag"></i> My Orders</li>
            <li onclick="location.href='/User/ContactUs'"><i class="fa-solid fa-headset"></i> Contact Us</li>
            <li class="logout">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Home/SignIn" style="text-decoration: none; color: inherit;">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i> Logout
                    </a>
                }
                else
                {
                    <a href="/Home/SignIn" style="text-decoration: none; color: inherit;">
                        <i class="fa-solid fa-right-to-bracket"></i> Login
                    </a>
                }
            </li>
        </ul>
    </div>
    <div id="popupOverlay" onclick="closeUserMenu()"></div>

    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="mt-auto bg-dark text-white py-4">
        <div class="container text-center">
            <p>&copy; 2026 - ALWAYZZZ FRESH</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function openUserMenu() { $('#userPopup, #popupOverlay').addClass('show'); }
        function closeUserMenu() { $('#userPopup, #popupOverlay').removeClass('show'); }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>