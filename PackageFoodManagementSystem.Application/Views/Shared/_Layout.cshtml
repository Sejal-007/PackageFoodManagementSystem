<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ALWAYZZZ FRESH</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @* --- FIX: This renders the CSS from your individual pages --- *@
    @* @await RenderSectionAsync("Styles", required: false) *@

    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    @* Flexbox ensures sticky footer *@

    <header class="app-header">
        <nav class="navbar navbar-expand-lg px-4 py-3 shadow-sm bg-white">
            <div class="d-flex align-items-center">
                <img src="~/images/applogo.png" class="app-logo me-2" style="width:50px;" alt="Logo">
                <span class="brand fw-bold text-orange" style="font-size: 24px;">ALWAYZZZ FRESH</span>
            </div>

            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-item me-3"><a class="nav-link fw-semibold" asp-controller="Menu" asp-action="Index">Explore</a></li>

                <li class="nav-item me-4">
                    <a class="nav-link position-relative" asp-controller="User" asp-action="MyBasket">
                        <i class="fa-solid fa-cart-shopping fa-lg" style="color: #ff6347;"></i>
                        <span id="cart-count" class="badge bg-danger rounded-circle position-absolute top-0 start-100 translate-middle" style="display: none; font-size: 0.7rem;">0</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" onclick="openUserMenu()">
                        <i class="fa-solid fa-user-circle fa-2x" style="color: #ff6347;"></i>
                    </a>
                </li>
                @* <li class="nav-item">
                    <a class="nav-link" href='/Home/SignIn' onclick="openUserMenu()">
                        <i class="fa fa-sign-in" style="color: #ff6347;"> <h style="font-family:Algerian;color:i">Sign In</h></i>
                    </a>
                </li> *@
            </ul>
        </nav>
    </header>

    @* --- User Popup Menu --- *@
    <div id="userPopup" class="user-popup">
        <div class="popup-header">
            <span>User Menu</span>
            <span class="close-btn" onclick="closeUserMenu()">×</span>
        </div>
        <ul class="popup-list">
            <li onclick="location.href='/User/Dashboard'"><i class="fa-solid fa-user-circle"></i> My Profile</li>
            <li onclick="location.href='/User/MyBasket'"><i class="fa-solid fa-cart-shopping"></i> My Basket</li>
            <li onclick="location.href='/User/MyOrders'"><i class="fa-solid fa-shopping-bag"></i> My Orders</li>
            <li onclick="location.href='/User/ContactUs'"><i class="fa-solid fa-headset"></i> Contact Us</li>
            <li onclick="location.href='/Home/Welcome'"><i class="fa-solid fa-right-to-bracket"></i> Sign Out</li>

            @* <a href="/Home/SignIn" style="text-decoration: none; color: inherit;">
                <i class="fa-solid fa-right-to-bracket"></i> LogIn
            </a> *@
           @* // <li class="logout"> *@

                @* @if (User.Identity.IsAuthenticated)
                {
                    <a href="/Home/SignIn" style="text-decoration: none; color: inherit;">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i> Logout
                    </a>
                }
                 else
                {
                    <a href="/Home/SignIn" style="text-decoration: none; color: inherit;">
                        <i class="fa-solid fa-right-to-bracket"></i> Logout
                    </a>
                }  *@
            
        </ul>
    </div>
    <div id="popupOverlay" onclick="closeUserMenu()"></div>

    @* --- Main Content Wrapper --- *@
    <div class="flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* --- Footer --- *@

    <footer class="footer-section bg-dark text-white pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row gy-4 mb-5">
                <div class="col-lg-4 col-md-6">
                    <h4 class="fw-bold text-orange mb-4">ALWAYZZZ FRESH</h4>
                    <p class="text-white-50 pe-lg-5">
                        Providing high-quality farm-fresh produce and daily essentials delivered directly to your doorstep in just 30 minutes.
                    </p>
                    <div class="d-flex gap-3 mt-4">
                        <a href="#" class="social-icon-box"><i class="fa-brands fa-facebook-f"></i></a>
                        <a href="#" class="social-icon-box"><i class="fa-brands fa-instagram"></i></a>
                        <a href="#" class="social-icon-box"><i class="fa-brands fa-twitter"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-6">
                    <h6 class="fw-bold text-white mb-4">Quick Links</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Menu" asp-action="Index">Explore Menu</a></li>
                        <li><a asp-controller="User" asp-action="ContactUs">Contact Us</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-6">
                    <h6 class="fw-bold text-white mb-4">Why Fresh?</h6>
                    <ul class="list-unstyled footer-links text-white-50">
                        <li><i class="fa-solid fa-check text-orange me-2"></i> 30-Min Delivery</li>
                        <li><i class="fa-solid fa-check text-orange me-2"></i> Secure Checkout</li>
                        <li><i class="fa-solid fa-check text-orange me-2"></i> Farm-to-Fork</li>
                        <li><i class="fa-solid fa-check text-orange me-2"></i> 24/7 Support</li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-bold text-white mb-4">Stay Fresh</h6>
                    <p class="small text-white-50">Subscribe to get the latest deals on essentials.</p>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control bg-transparent border-secondary text-white small" placeholder="Your Email">
                        <button class="btn btn-orange btn-sm px-3" type="button">Join</button>
                    </div>
                </div>
            </div>

            <hr class="border-secondary opacity-25">

            <div class="row align-items-center pt-3">
                <div class="col-md-6 text-center text-md-start">
                    <p class="small text-white-50 mb-0">&copy; 2025 Alwayzzz Fresh. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="payment-methods opacity-50">
                        <i class="fa-brands fa-cc-visa fs-3 mx-2"></i>
                        <i class="fa-brands fa-cc-mastercard fs-3 mx-2"></i>
                        <i class="fa-solid fa-credit-card fs-3 mx-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function openUserMenu() {
            document.getElementById('userPopup').style.display = 'block';
            document.getElementById('popupOverlay').style.display = 'block';
        }
        function closeUserMenu() {
            document.getElementById('userPopup').style.display = 'none';
            document.getElementById('popupOverlay').style.display = 'none';
        }
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>