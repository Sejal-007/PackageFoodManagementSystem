@model IEnumerable<PackageFoodManagementSystem.Repository.Models.CustomerAddress>

<div class="container py-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 15px;">
                <div class="list-group list-group-flush">
                    <div class="p-3 bg-light"><small class="text-uppercase fw-bold text-muted">Personal Details</small></div>
                    <a href="/User/EditProfile" class="list-group-item list-group-item-action border-0 py-3"><i class="fa-solid fa-user me-2"></i> Edit Profile</a>
                    <a href="/User/DeliveryAddress" class="list-group-item list-group-item-action border-0 py-3 active bg-success"><i class="fa-solid fa-map-marker-alt me-2"></i> Delivery Addresses</a>
                    <a href="/User/EmailAddress" class="list-group-item list-group-item-action border-0 py-3"><i class="fa-solid fa-envelope me-2"></i> Email Addresses</a>
                </div>
            </div>
        </div>

        <div class="col-md-9 px-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">Delivery <span class="text-success">Addresses</span></h2>
                <button class="btn btn-dark rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#addressMapModal">+ Add New</button>
            </div>

            <div class="row g-4">
                @if (Model != null && Model.Any())
                {
                    @foreach (var addr in Model)
                    {
                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm p-3 address-card">
                                <div class="d-flex justify-content-between">
                                    <span class="badge rounded-pill bg-light text-dark border px-3 mb-2">
                                        @(addr.AddressType == "Home" ? "🏠 Home" : "🏢 Work")
                                    </span>
                                    <div class="dropdown">
                                        <i class="fa-solid fa-ellipsis-vertical text-muted cursor-pointer" data-bs-toggle="dropdown"></i>
                                        <ul class="dropdown-menu shadow border-0">
                                            <li><a class="dropdown-item text-danger" href="#">Delete</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <h6 class="fw-bold">@addr.StreetAddress</h6>
                                <p class="text-muted small mb-1">@addr.Landmark</p>
                                <p class="text-muted small">@addr.City, @addr.PostalCode</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5">
                        <i class="fa-solid fa-map-location-dot fa-3x text-light mb-3"></i>
                        <p class="text-muted">No saved addresses found. Click "+ Add New Address" to begin.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .address-card {
        border-radius: 20px;
        transition: 0.3s;
        border: 1px solid #f0f0f0 !important;
    }

        .address-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important;
            border-color: #198754 !important;
        }

    .active.bg-success {
        background-color: #198754 !important;
    }
</style>