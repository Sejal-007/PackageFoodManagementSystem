


@{
    ViewData["Title"] = "Contact Us";
    var userName = User.Identity.IsAuthenticated ? User.Identity.Name : "User";
    var userEmail = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value ?? "";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Get In <span class="text-primary">Touch</span></h1>
        <p class="text-muted">We’re here to help you with any questions or support you need.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="d-flex flex-column gap-3">
                <div class="contact-card p-3 shadow-sm border-0 d-flex align-items-center bg-white" style="border-radius: 15px;">
                    <div class="icon-box bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 small">Email Us</h6>
                        <a href="mailto:support@alwayzzzfresh.com" class="text-decoration-none text-muted small">support@alwayzzzfresh.com</a>
                    </div>
                </div>

                <div class="contact-card p-3 shadow-sm border-0 d-flex align-items-center bg-white" style="border-radius: 15px;">
                    <div class="icon-box bg-success text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 45px; height: 45px;">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 small">Call Us</h6>
                        <a href="tel:18601231000" class="text-decoration-none text-muted small">1860-123-1000</a>
                    </div>
                </div>

                <div class="card border-0 shadow-sm overflow-hidden mt-2" style="border-radius: 15px;">
                    <div class="bg-light d-flex flex-column align-items-center justify-content-center text-center p-4" style="height: 200px; background: linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,0.8)), url('https://api.mapbox.com/styles/v1/mapbox/light-v10/static/80.27,13.08,12/400x200?access_token=YOUR_TOKEN'); background-size: cover;">
                        <i class="fa-solid fa-location-dot text-danger fs-1 mb-2"></i>
                        <h6 class="fw-bold mb-1">Our Headquarters</h6>
                        <p class="small text-muted mb-0">Old Madras Road, Chennai</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow p-4 p-md-5" style="border-radius: 20px;">
                <h3 class="fw-bold mb-4">Send us a message</h3>
                <form id="contactForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted">YOUR NAME</label>
                            <input type="text" class="form-control bg-light border-0 py-2" value="@userName" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted">YOUR EMAIL</label>
                            <input type="email" class="form-control bg-light border-0 py-2" value="@userEmail" placeholder="email@example.com" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label small fw-bold text-muted">SUBJECT</label>
                            <select class="form-select bg-light border-0 py-2">
                                <option selected>Order Inquiry</option>
                                <option>Gift Card Support</option>
                                <option>Payment Issue</option>
                                <option>Feedback</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label small fw-bold text-muted">MESSAGE</label>
                            <textarea class="form-control bg-light border-0" rows="4" placeholder="Describe your issue..." required></textarea>
                        </div>
                        <div class="col-12 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill fw-bold shadow-sm" id="submitBtn">
                                Send Message <i class="fa-solid fa-paper-plane ms-2"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <div id="successMsg" class="text-center d-none py-4">
                    <div class="mb-3 text-success">
                        <i class="fa-solid fa-circle-check display-3"></i>
                    </div>
                    <h4 class="fw-bold">Message Sent!</h4>
                    <p class="text-muted">Thanks @userName, we will get back to you shortly.</p>
                    <button class="btn btn-outline-primary rounded-pill px-4 mt-2" onclick="location.reload()">Send another</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .contact-card {
        transition: all 0.3s ease;
    }

        .contact-card:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05) !important;
        }

    .form-control:focus, .form-select:focus {
        background-color: #fff !important;
        border: 1px solid #0d6efd !important;
        box-shadow: none;
    }
</style>

<script>
    document.getElementById('contactForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const btn = document.getElementById('submitBtn');
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Sending...';

        setTimeout(() => {
            document.getElementById('contactForm').classList.add('d-none');
            document.getElementById('successMsg').classList.remove('d-none');
        }, 1500);
    });
</script>