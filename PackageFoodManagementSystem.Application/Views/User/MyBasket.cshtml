<script>
    // Load basket as soon as page opens
    document.addEventListener("DOMContentLoaded", renderBasket);

    function renderBasket() {
        // Match the key "myCart" used in your Menu script
        const cart = JSON.parse(localStorage.getItem("myCart")) || [];
        const basketContent = document.getElementById("basket-content");
        const emptyView = document.getElementById("empty-basket");
        const basketItems = document.getElementById("basketItems");
        const summaryItems = document.getElementById("summaryItems");
        const totalAmount = document.getElementById("totalAmount");

        if (cart.length === 0) {
            basketContent.style.display = "none";
            emptyView.style.display = "block";
            return;
        }

        basketContent.style.display = "block";
        emptyView.style.display = "none";

        let grandTotal = 0;
        basketItems.innerHTML = "";
        summaryItems.innerHTML = "";

        cart.forEach(item => {
            // Your Menu script stores price as a number, but we ensure it here
            const itemPrice = parseFloat(item.price);
            const itemQty = parseInt(item.qty);
            const itemTotal = itemPrice * itemQty;
            grandTotal += itemTotal;

            basketItems.innerHTML += `
                <div class="card mb-3 p-3 shadow-sm border-0" style="border-radius:12px;">
                    <div class="d-flex align-items-center">
                        <img src="${item.image}" style="width:80px; height:80px; object-fit:cover; border-radius:8px;" class="me-3">
                        <div class="flex-grow-1">
                            <h5 class="mb-0 fw-bold">${item.name}</h5>
                            <p class="text-muted mb-0">₹${itemPrice} x ${itemQty}</p>
                        </div>
                        <div class="text-end">
                            <h5 class="fw-bold mb-0 text-success">₹${itemTotal.toFixed(2)}</h5>
                            <button class="btn btn-link text-danger small text-decoration-none p-0" onclick="removeItem('${item.id}')">
                                <i class="fa-solid fa-trash-can"></i> Remove
                            </button>
                        </div>
                    </div>
                </div>`;

            summaryItems.innerHTML += `
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">${item.name} (x${itemQty})</span>
                    <span>₹${itemTotal.toFixed(2)}</span>
                </div>`;
        });

        totalAmount.innerText = grandTotal.toFixed(2);
        localStorage.setItem("orderTotal", grandTotal.toFixed(2));
    }

    function removeItem(id) {
        let cart = JSON.parse(localStorage.getItem("myCart")) || [];
        // Convert both to strings to ensure comparison works regardless of data type
        cart = cart.filter(item => String(item.id) !== String(id));

        localStorage.setItem("myCart", JSON.stringify(cart));

        // Refresh the display
        renderBasket();

        // Sync with the Navbar badge if it exists
        if (typeof updateCartBadge === "function") updateCartBadge();
    }

    function prepareCheckout() {
        const total = document.getElementById("totalAmount").innerText;
        if(total === "0" || total === "0.00") {
            alert("Your basket is empty!");
            return;
        }
        window.location.href = '/Payment/Checkout';
    }
</script>