<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;800&display=swap" rel="stylesheet">

<div class="container my-5">
    <div id="basket-content" style="display: none;">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="fw-800">Your <span class="text-warning">Selection</span> 🥤</h2>
                    <span class="badge bg-dark rounded-pill px-3" id="itemCount">0 Items</span>
                </div>

                <div class="card border-0 shadow-sm p-3 mb-4 rounded-4">
                    <p class="small fw-bold mb-2" id="deliveryText">Loading progress...</p>
                    <div class="progress rounded-pill" style="height: 10px; background-color: #f1f5f9;">
                        <div id="deliveryProgress" class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                    </div>
                </div>

                <div id="basketItems">
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card p-4 shadow-sm border-0 sticky-top rounded-5" style="top: 20px;">
                    <h4 class="fw-800 mb-4">🛒 Order Summary</h4>
                    <div id="summaryItems" class="mb-3"></div>

                    <div class="border-top pt-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span class="fw-bold">₹<span id="subtotalAmount">0.00</span></span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Delivery Fee</span>
                            <span id="deliveryFeeLabel" class="fw-bold text-success">₹0.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="h5 fw-800 mb-0">Grand Total:</span>
                            <span class="h3 fw-800 text-dark mb-0">₹<span id="totalAmount">0.00</span></span>
                        </div>
                    </div>

                    <button class="btn btn-dark w-100 py-3 rounded-pill fw-800 shadow" onclick="prepareCheckout()">
                        Proceed to Checkout <i class="fa-solid fa-arrow-right ms-2"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="empty-basket" class="text-center py-5" style="display:none;">
        <h2 class="fw-800">Your basket is <span class="text-warning">empty</span></h2>
        <a href="/Menu/Index" class="btn btn-outline-dark px-5 rounded-pill mt-3">Start Shopping</a>
    </div>
</div>

<style>
    body {
        background: #f8fafc;
        font-family: 'Plus Jakarta Sans', sans-serif;
    }

    .fw-800 {
        font-weight: 800;
    }

    .basket-item {
        background: white;
        border-radius: 20px;
        transition: 0.3s;
        border: 1px solid #f1f5f9;
    }

        .basket-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        }

    .qty-btn {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        border: 1px solid #eee;
        background: white;
        font-weight: bold;
    }

        .qty-btn:hover {
            background: #000;
            color: #fff;
            border-color: #000;
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", renderBasket);

    function renderBasket() {
        const cart = JSON.parse(localStorage.getItem("myCart")) || [];
        const content = document.getElementById("basket-content");
        const empty = document.getElementById("empty-basket");
        const itemsList = document.getElementById("basketItems");
        const summary = document.getElementById("summaryItems");

        if (cart.length === 0) {
            content.style.display = "none";
            empty.style.display = "block";
            return;
        }

        content.style.display = "block";
        empty.style.display = "none";

        let subtotal = 0;
        itemsList.innerHTML = "";
        summary.innerHTML = "";

        cart.forEach((item) => {
            const itemTotal = item.price * item.qty;
            subtotal += itemTotal;

            itemsList.innerHTML += `
                <div class="basket-item mb-3 p-3 shadow-sm d-flex align-items-center">
                    <img src="${item.image}" class="rounded-3 me-3" style="width:80px; height:80px; object-fit:cover;">
                    <div class="flex-grow-1">
                        <h5 class="fw-bold mb-0">${item.name}</h5>
                        <p class="text-muted small mb-2">Unit Price: ₹${item.price}</p>
                        <div class="d-flex align-items-center gap-2">
                            <button class="qty-btn" onclick="updateQty('${item.id}', -1)">-</button>
                            <span class="fw-bold">${item.qty}</span>
                            <button class="qty-btn" onclick="updateQty('${item.id}', 1)">+</button>
                        </div>
                    </div>
                    <div class="text-end">
                        <h5 class="fw-800 mb-1">₹${itemTotal.toFixed(2)}</h5>
                        <button class="btn btn-link text-danger p-0" onclick="removeItem('${item.id}')"><i class="fa-solid fa-trash-can"></i></button>
                    </div>
                </div>`;

            summary.innerHTML += `
                <div class="d-flex justify-content-between mb-1 small">
                    <span class="text-muted">${item.name} (x${item.qty})</span>
                    <span>₹${itemTotal.toFixed(2)}</span>
                </div>`;
        });

        // Threshold Logic
        const threshold = 100;
        const progress = Math.min((subtotal / threshold) * 100, 100);
        document.getElementById("deliveryProgress").style.width = progress + "%";

        const deliveryFee = subtotal >= threshold ? 0 : 40;
        const deliveryText = document.getElementById("deliveryText");
        const feeLabel = document.getElementById("deliveryFeeLabel");

        if (subtotal >= threshold) {
            deliveryText.innerHTML = `🎉 You've unlocked <span class="text-success">FREE DELIVERY!</span>`;
            feeLabel.innerText = "FREE";
            feeLabel.className = "fw-bold text-success";
        } else {
            deliveryText.innerHTML = `Add <strong>₹${(threshold - subtotal).toFixed(2)}</strong> more for <span class="text-success">FREE DELIVERY</span>`;
            feeLabel.innerText = "₹40.00";
            feeLabel.className = "fw-bold text-dark";
        }

        document.getElementById("subtotalAmount").innerText = subtotal.toFixed(2);
        const grandTotal = subtotal + deliveryFee;
        document.getElementById("totalAmount").innerText = grandTotal.toFixed(2);
        document.getElementById("itemCount").innerText = cart.length + " Items";

        localStorage.setItem("orderTotal", grandTotal.toFixed(2));
    }

    function updateQty(id, change) {
        let cart = JSON.parse(localStorage.getItem("myCart")) || [];
        const item = cart.find(i => String(i.id) === String(id));
        if (item) {
            item.qty = Math.max(1, item.qty + change);
            localStorage.setItem("myCart", JSON.stringify(cart));
            renderBasket();
        }
    }

    function removeItem(id) {
        let cart = JSON.parse(localStorage.getItem("myCart")) || [];
        cart = cart.filter(item => String(item.id) !== String(id));
        localStorage.setItem("myCart", JSON.stringify(cart));
        renderBasket();
    }

    function prepareCheckout() {
        window.location.href = '/Payment/Checkout';
    }
</script>