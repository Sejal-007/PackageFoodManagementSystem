

@{
    ViewData["Title"] = "Edit Address";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 15px;">
                @Html.Partial("_AccountSidebar")
            </div>
        </div>

        <div class="col-md-9 ps-md-5">
            <div class="d-flex align-items-center mb-4">
                <a href="/User/DeliveryAddress" class="btn btn-light rounded-circle me-3">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
                <h2 class="fw-bold mb-0">Edit <span class="text-success">Address</span></h2>
            </div>

            <div class="card border-0 shadow-sm p-4" style="border-radius: 20px;">
                <form method="post" asp-action="UpdateAddress" asp-controller="User">
                    <input type="hidden" name="id" value="1" />

                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold small text-muted">STREET / HOUSE NO</label>
                            <input type="text" name="street" class="form-control bg-light border-0 py-2"
                                   value="Old Madras Road" required style="border-radius:10px;">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">CITY</label>
                            <input type="text" name="city" class="form-control bg-light border-0 py-2"
                                   value="Chennai" required style="border-radius:10px;">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">PIN CODE</label>
                            <input type="text" name="pin" class="form-control bg-light border-0 py-2"
                                   value="600130" required style="border-radius:10px;">
                        </div>

                        <div class="col-12 mt-4">
                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" id="isDefault" checked>
                                <label class="form-check-label small text-muted" for="isDefault">
                                    Keep as default delivery address
                                </label>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-success px-5 py-2 rounded-pill fw-bold shadow-sm">
                                    Update Address
                                </button>
                                <a href="/User/DeliveryAddress" class="btn btn-outline-secondary px-4 py-2 rounded-pill fw-bold">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    /* Styling to match your Alwayzzz Fresh theme */
    .form-control:focus {
        background-color: #fff !important;
        border: 1px solid #198754 !important;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.1) !important;
    }

    .btn-success {
        background-color: #198754 !important;
        border: none;
    }
</style>