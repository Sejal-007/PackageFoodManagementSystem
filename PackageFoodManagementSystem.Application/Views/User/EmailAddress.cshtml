@{
    ViewData["Title"] = "Email Addresses";
    var userName = User.Identity.IsAuthenticated ? User.Identity.Name : "User";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 15px;">
                @Html.Partial("_AccountSidebar")
            </div>
        </div>

        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-0">Email <span class="text-success">Addresses</span></h2>
                    <p class="text-muted small">Managed communication for <strong>@userName</strong></p>
                </div>
                <button class="btn btn-outline-success rounded-pill px-4 fw-bold shadow-sm" onclick="addNewEmail()">
                    <i class="fa-solid fa-plus me-2"></i> Add Alternate
                </button>
            </div>

            <div class="row g-3">
                <div class="col-12">
                    <div class="card border-0 shadow-sm p-3 position-relative email-card" style="border-radius: 15px; border-left: 5px solid #198754 !important;">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="fa-solid fa-envelope-circle-check text-success fs-4"></i>
                                </div>
                                <div>
                                    <span class="badge bg-success rounded-pill mb-1">Primary</span>
                                    <h5 class="fw-bold mb-0">yayatinehe@gmail.com</h5>
                                    <small class="text-muted">Used for security alerts and billing</small>
                                </div>
                            </div>
                            <div class="text-success fw-bold small">
                                <i class="fa-solid fa-shield-check me-1"></i> Verified
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card border-0 shadow-sm p-3 email-card" style="border-radius: 15px;">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <div class="bg-light p-3 rounded-circle me-3">
                                    <i class="fa-solid fa-envelope text-muted fs-4"></i>
                                </div>
                                <div>
                                    <span class="badge bg-light text-dark border rounded-pill mb-1">Alternate</span>
                                    <h5 class="fw-bold mb-0 text-muted">yayati.work@gmail.com</h5>
                                    <small class="text-muted">Used for promotions and updates</small>
                                </div>
                            </div>
                            <div class="dropdown">
                                <button class="btn btn-light rounded-circle" data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-ellipsis-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    <li><a class="dropdown-item" href="#"><i class="fa-solid fa-star text-warning me-2"></i> Make Primary</a></li>
                                    <li><a class="dropdown-item text-danger" href="#" onclick="removeEmail(this)"><i class="fa-solid fa-trash-can me-2"></i> Remove</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 p-3 bg-light rounded-3 d-flex align-items-start border">
                <i class="fa-solid fa-circle-info text-primary mt-1 me-3"></i>
                <small class="text-muted">
                    We use these emails to keep <strong>@userName</strong> updated on fresh arrivals and order tracking.
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .email-card {
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }

        .email-card:hover {
            transform: scale(1.01);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important;
            border-color: #f1f1f1;
        }

    .btn-light:hover {
        background-color: #e9ecef;
    }
</style>

<script>
    function removeEmail(el) {
        if(confirm("Are you sure you want to remove this alternate email?")) {
            const card = el.closest('.col-12');
            card.style.opacity = "0";
            card.style.transform = "translateX(20px)";
            setTimeout(() => card.remove(), 300);
        }
    }

    function addNewEmail() {
        const email = prompt("Enter your alternate email address:");
        if (email) {
            alert("Verification link sent to " + email);
        }
    }
</script>