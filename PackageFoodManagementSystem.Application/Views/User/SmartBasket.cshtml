


@model PackageFoodManagementSystem.Repository.Models.UserAuthentication
@{
    ViewData["Title"] = "Smart Basket";
    // Prevents NullReferenceException if session/model is empty
    var displayName = (Model != null && !string.IsNullOrEmpty(Model.Name)) ? Model.Name : "User";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 15px;">
                @Html.Partial("_AccountSidebar")
            </div>
        </div>

        <div class="col-md-9 ps-md-4">
            <div class="mb-4">
                <h2 class="fw-bold mb-0">Smart <span class="text-success">Basket</span></h2>
                <p class="text-muted mb-0">Personalized essentials for <strong>@displayName</strong></p>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-3 product-card">
                        <img src="/images/milk.png" class="card-img-top rounded-3 mb-3" alt="Milk">
                        <h6 class="fw-bold mb-1">Amul Toned Milk</h6>
                        <p class="small text-muted mb-3">Dairy & Eggs • 1L</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="fw-bold text-dark">₹54.00</span>
                            <button onclick="addItem('Amul Toned Milk', 54)" class="btn btn-outline-success btn-sm rounded-circle shadow-sm">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-3 product-card">
                        <img src="/images/Eggs.jpg" class="card-img-top rounded-3 mb-3" alt="Eggs">
                        <h6 class="fw-bold mb-1">Organic Eggs</h6>
                        <p class="small text-muted mb-3">Dairy & Eggs • 12 pcs</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="fw-bold text-dark">₹75.00</span>
                            <button onclick="addItem('Organic Eggs', 75)" class="btn btn-outline-success btn-sm rounded-circle shadow-sm">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-3 product-card">
                        <img src="/images/vapers.jpg" class="card-img-top rounded-3 mb-3" alt="Vapers">
                        <h6 class="fw-bold mb-1">Organic Vapers</h6>
                        <p class="small text-muted mb-3">Potato Vapers</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="fw-bold text-dark">₹75.00</span>
                            <button onclick="addItem('Organic Vapers', 75)" class="btn btn-outline-success btn-sm rounded-circle shadow-sm">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-3 product-card">
                        <img src="/images/Veg.jpg" class="card-img-top rounded-3 mb-3" alt="Veg">
                        <h6 class="fw-bold mb-1">Fresh Vegetables</h6>
                        <p class="small text-muted mb-3">Seasonal Mix</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="fw-bold text-dark">₹60.00</span>
                            <button onclick="addItem('Fresh Vegetables', 60)" class="btn btn-outline-success btn-sm rounded-circle shadow-sm">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-3 product-card">
                        <img src="/images/cake.jpg" class="card-img-top rounded-3 mb-3" alt="Cake">
                        <h6 class="fw-bold mb-1">Jar Cake</h6>
                        <p class="small text-muted mb-3">Chocolate Bliss</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="fw-bold text-dark">₹135.00</span>
                            <button onclick="addItem('Jar Cake', 135)" class="btn btn-outline-success btn-sm rounded-circle shadow-sm">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-3 product-card">
                        <img src="https://images.unsplash.com/photo-1586444248902-2f64eddc13df?w=300" class="card-img-top rounded-3 mb-3" alt="Oats">
                        <h6 class="fw-bold mb-1">Quaker Oats</h6>
                        <p class="small text-muted mb-3">Breakfast • 1kg</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="fw-bold text-dark">₹190.00</span>
                            <button onclick="addItem('Quaker Oats', 190)" class="btn btn-outline-success btn-sm rounded-circle shadow-sm">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="orderSummaryOverlay" class="order-summary-card shadow-lg p-4 d-none">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-bold mb-0 text-success">My Basket</h5>
                    <button class="btn-close" onclick="toggleSummary()"></button>
                </div>
                <div id="cartItemList" class="mb-3 small overflow-auto" style="max-height: 120px;"></div>
                <div class="border-top pt-3">
                    <div class="d-flex justify-content-between mb-3 fw-bold">
                        <span>Total:</span>
                        <span class="text-success" id="summary-total">₹0.00</span>
                    </div>
                    <button onclick="location.href='/Payment/Checkout'" class="btn btn-success w-100 rounded-pill fw-bold">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s ease;
        border: 1px solid #f0f0f0 !important;
        border-radius: 20px !important;
    }

        .product-card:hover {
            transform: translateY(-5px);
            border-color: #198754 !important;
        }

    .card-img-top {
        height: 160px;
        object-fit: cover;
        border-radius: 15px !important;
    }

    .order-summary-card {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 300px;
        background: white;
        border-radius: 20px;
        z-index: 1050;
        border: 1px solid #ddd;
    }
</style>

<script>
    let currentTotal = 0;
    let cartItems = [];

        // Add this inside your script tag in SmartBasket.cshtml
    function addItem(name, price) {
        currentTotal += price;
        cartItems.push({ name, price });

        // Save to localStorage immediately so it's ready for checkout
        localStorage.setItem("orderTotal", currentTotal.toFixed(2));

        updateDisplay();
        document.getElementById('orderSummaryOverlay').classList.remove('d-none');
    }

    function updateDisplay() {
        document.getElementById('summary-total').innerText = "₹" + currentTotal.toFixed(2);
        const list = document.getElementById('cartItemList');
        list.innerHTML = cartItems.map(item => `
            <div class="d-flex justify-content-between mb-1">
                <span>${item.name}</span>
                <span>₹${item.price.toFixed(2)}</span>
            </div>
        `).join('');
    }

    function toggleSummary() {
        document.getElementById('orderSummaryOverlay').classList.add('d-none');
    }
</script>