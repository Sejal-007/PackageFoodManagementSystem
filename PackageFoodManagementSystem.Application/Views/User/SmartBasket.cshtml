@{
    ViewData["Title"] = "Smart Basket";
    var userName = User.Identity.IsAuthenticated ? User.Identity.Name : "User";
}

<div class="container my-5 position-relative">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 15px;">
                @Html.Partial("_AccountSidebar")
            </div>
        </div>

        <div class="col-md-9 ps-md-5 position-relative">
            <div class="d-flex justify-content-between align-items-end mb-4">
                <div>
                    <h2 class="fw-bold mb-0">Smart <span class="text-success">Section</span></h2>
                    <p class="text-muted mb-0">Personalized essentials for <strong>@userName</strong></p>
                </div>
                <button onclick="addAllAndShow()" class="btn btn-success rounded-pill px-4 fw-bold shadow-sm">
                    <i class="fa-solid fa-cart-plus me-2"></i> Add All to Basket
                </button>
            </div>

            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-3" style="border-radius: 20px;">
                        <span class="badge bg-light text-success border position-absolute m-2 top-0 start-0 rounded-pill">
                            <i class="fa-solid fa-bolt me-1"></i> Frequent
                        </span>
                        <img src="~/images/milk.png" class="card-img-top rounded-3 mb-3" alt="Milk">
                        <h6 class="fw-bold mb-1">Amul Toned Milk</h6>
                        <p class="small text-muted mb-3">Dairy & Eggs</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="fw-bold text-dark">₹54.00</span>
                            <button onclick="addItem('Amul Toned Milk', 54)" class="btn btn-outline-success btn-sm rounded-circle shadow-sm">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm p-3" style="border-radius: 20px;">
                        <span class="badge bg-light text-success border position-absolute m-2 top-0 start-0 rounded-pill">
                            <i class="fa-solid fa-bolt me-1"></i> Frequent
                        </span>
                        <img src="https://images.unsplash.com/photo-1598170845058-32b9d6a5da37?auto=format&fit=crop&w=200&q=80" class="card-img-top rounded-3 mb-3" alt="Carrots">
                        <h6 class="fw-bold mb-1">Fresh Carrots</h6>
                        <p class="small text-muted mb-3">Vegetables</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <span class="fw-bold text-dark">₹40.00</span>
                            <button onclick="addItem('Fresh Carrots', 40)" class="btn btn-outline-success btn-sm rounded-circle shadow-sm">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="orderSummaryOverlay" class="order-summary-card shadow-lg p-4 d-none">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="fw-bold mb-0"><i class="fa-solid fa-cart-shopping me-2"></i> Order Summary</h5>
                    <button class="btn-close" onclick="toggleOrderSummary()"></button>
                </div>

                <div class="summary-details">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span class="fw-bold" id="summary-subtotal">₹0.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-success fw-bold">Delivery</span>
                        <span class="text-success fw-bold">FREE</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-4 pt-3 border-top">
                        <h5 class="fw-bold mb-0">Grand Total</h5>
                        <h5 class="fw-bold mb-0 text-success" id="summary-total">₹0.00</h5>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-link text-danger text-decoration-none p-0 small" onclick="clearBasket()">
                        <i class="fa-solid fa-trash-can me-1"></i> Remove All
                    </button>
                    <button onclick="goToCheckout()" class="btn btn-success rounded-pill px-4 fw-bold shadow-sm">
                        Checkout <i class="fa-solid fa-arrow-right ms-2"></i>
                    </button>
                </div>
            </div>

            <div class="mt-5 p-4 bg-light rounded-4 border-start border-success border-4">
                <div class="d-flex align-items-center">
                    <i class="fa-solid fa-wand-magic-sparkles fs-3 text-success me-3"></i>
                    <div>
                        <h6 class="fw-bold mb-0">Why these items?</h6>
                        <p class="small text-muted mb-0">We noticed @userName buys these every week. We've added them here for a 1-click checkout experience.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .order-summary-card {
        position: absolute;
        top: 80px;
        right: -20px;
        width: 320px;
        background: white;
        border-radius: 20px;
        z-index: 1000;
        border: 1px solid rgba(0,0,0,0.05);
        animation: slideIn 0.3s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(20px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .btn-outline-success {
        border-radius: 12px;
        transition: 0.3s;
    }

        .btn-outline-success:hover {
            background: #198754;
            color: white;
        }

    .card-img-top {
        height: 140px;
        object-fit: cover;
    }
</style>

<script>
    let currentTotal = 0;

    function toggleOrderSummary() {
        const overlay = document.getElementById('orderSummaryOverlay');
        overlay.classList.toggle('d-none');
    }

    function addItem(name, price) {
        currentTotal += price;
        updateDisplay();

        let cart = JSON.parse(localStorage.getItem("myCart")) || [];
        cart.push({ name: name, price: price, quantity: 1 });
        localStorage.setItem("myCart", JSON.stringify(cart));

        if(document.getElementById('orderSummaryOverlay').classList.contains('d-none')) {
            toggleOrderSummary();
        }
    }

    function addAllAndShow() {
        clearBasket(false);
        addItem('Amul Toned Milk', 54);
        addItem('Fresh Carrots', 40);
    }

    function updateDisplay() {
        document.getElementById('summary-subtotal').innerText = "₹" + currentTotal.toFixed(2);
        document.getElementById('summary-total').innerText = "₹" + currentTotal.toFixed(2);
    }

    function clearBasket(showConfirm = true) {
        if(!showConfirm || confirm("Clear your selection?")) {
            currentTotal = 0;
            localStorage.removeItem("myCart");
            updateDisplay();
            if(showConfirm) toggleOrderSummary();
        }
    }

    // Navigates to the Checkout Page
    function goToCheckout() {
        if (currentTotal > 0) {
            window.location.href = "/Payment/Checkout";
        } else {
            alert("Your basket is empty!");
        }
    }
</script>