@model IEnumerable<PackagedFoodFrontend.Controllers.OrderModel>
@{
    ViewData["Title"] = "Past Orders";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 15px;">
                @Html.Partial("_AccountSidebar")
            </div>
        </div>

        <div class="col-md-9 ps-md-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-0">Past <span class="text-success">Orders</span></h2>
                    <p class="text-muted">Orders for <strong>@User.Identity.Name</strong></p>
                </div>
            </div>

            <div id="all-orders-wrapper">
                @if (Model != null && Model.Any())
                {
                    @foreach (var order in Model)
                    {
                        <div class="order-card card border-0 shadow-sm mb-4" style="border-radius: 20px;">
                            <div class="card-body p-4">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <div class="bg-light rounded-3 p-3 text-center">
                                            <i class="fa-solid fa-box text-success fs-3"></i>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="fw-bold mb-1">Order @order.OrderId</h6>
                                        <p class="small text-muted mb-0">Placed on @order.Date.ToString("dd MMM yyyy, hh:mm tt")</p>
                                    </div>
                                    <div class="col-md-3">
                                        <span class="badge bg-success-light text-success rounded-pill px-3 py-2">
                                            <i class="fa-solid fa-circle-check me-1"></i> @order.Status
                                        </span>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <h6 class="fw-bold mb-0">₹@order.Amount</h6>
                                        <small class="text-muted d-block mb-1">via @order.Method</small>
                                        <button class="btn btn-link text-success text-decoration-none small p-0" type="button" data-bs-toggle="collapse" data-bs-target="#details-@order.OrderId.Replace("#", "")">
                                            View Details
                                        </button>
                                    </div>
                                </div>

                                <div class="collapse" id="details-@order.OrderId.Replace("#", "")">
                                    <hr class="my-3 opacity-10">
                                    <div class="row g-2">
                                        <div class="col-6 small text-muted">Items from your Smart Basket</div>
                                        <div class="col-6 text-end small fw-bold">₹@order.Amount</div>
                                    </div>
                                    <div class="d-flex gap-2 mt-4">
                                        <button class="btn btn-success rounded-pill px-4 btn-sm fw-bold">Reorder</button>
                                        <button class="btn btn-outline-secondary rounded-pill px-4 btn-sm fw-bold" onclick="window.print()">Get Invoice</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <div id="empty-state" class="text-center py-5 bg-white shadow-sm rounded-4 d-none">
                <i class="fa-solid fa-cart-shopping fs-1 text-muted mb-3"></i>
                <h5 class="text-muted">No orders found yet.</h5>
                <a href="/Menu/Index" class="btn btn-success rounded-pill mt-2">Start Shopping</a>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-success-light {
        background-color: rgba(25, 135, 84, 0.1);
    }

    .order-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 20px;
    }

        .order-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
        }

    .btn-success {
        background-color: #198754 !important;
        border: none;
    }

    .btn-link:hover {
        color: #157347 !important;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const wrapper = document.getElementById("all-orders-wrapper");
        const emptyState = document.getElementById("empty-state");
        const localOrders = JSON.parse(localStorage.getItem("pastOrders")) || [];

        // If no server orders and no local orders, show empty state
        if (wrapper.children.length === 0 && localOrders.length === 0) {
            emptyState.classList.remove("d-none");
            return;
        }

        // Add LocalStorage orders to the top of the list
        localOrders.forEach(order => {
            const cleanId = order.orderId.replace("#", "");
            const orderHtml = `
                <div class="order-card card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <div class="bg-light rounded-3 p-3 text-center">
                                    <i class="fa-solid fa-box text-success fs-3"></i>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h6 class="fw-bold mb-1">Order ${order.orderId}</h6>
                                <p class="small text-muted mb-0">Placed on ${order.date}</p>
                            </div>
                            <div class="col-md-3">
                                <span class="badge bg-success-light text-success rounded-pill px-3 py-2">
                                    <i class="fa-solid fa-circle-check me-1"></i> ${order.status}
                                </span>
                            </div>
                            <div class="col-md-3 text-end">
                                <h6 class="fw-bold mb-0">₹${order.amount}</h6>
                                <small class="text-muted d-block mb-1">via ${order.paymentMethod || 'Online'}</small>
                                <button class="btn btn-link text-success text-decoration-none small p-0" type="button"
                                        data-bs-toggle="collapse" data-bs-target="#details-${cleanId}">
                                    View Details
                                </button>
                            </div>
                        </div>

                        <div class="collapse" id="details-${cleanId}">
                            <hr class="my-3 opacity-10">
                            <div class="small text-muted mb-2">Order Summary:</div>
                            ${order.items.map(item => `
                                <div class="d-flex justify-content-between small mb-1">
                                    <span>${item.name} (x${item.qty})</span>
                                    <span class="fw-bold">₹${(item.price * item.qty).toFixed(2)}</span>
                                </div>
                            `).join('')}
                            <hr class="my-2 opacity-10">
                            <div class="d-flex gap-2 mt-4">
                                <button class="btn btn-success rounded-pill px-4 btn-sm fw-bold">Reorder</button>
                                <button class="btn btn-outline-secondary rounded-pill px-4 btn-sm fw-bold" onclick="window.print()">Get Invoice</button>
                            </div>
                        </div>
                    </div>
                </div>`;
            wrapper.insertAdjacentHTML('afterbegin', orderHtml);
        });
    });
</script>