@{
    ViewData["Title"] = "Past Orders";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 15px;">
                @Html.Partial("_AccountSidebar")
            </div>
        </div>

        <div class="col-md-9 ps-md-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-0">Past <span class="text-success">Orders</span></h2>
                    <p class="text-muted">Browse and reorder from previous purchases.</p>
                </div>
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle rounded-pill shadow-sm" type="button" data-bs-toggle="dropdown">
                        Last 3 months
                    </button>
                    <ul class="dropdown-menu border-0 shadow">
                        <li><a class="dropdown-item" href="#">Last 30 days</a></li>
                        <li><a class="dropdown-item" href="#">Year 2025</a></li>
                    </ul>
                </div>
            </div>

            <div class="order-card card border-0 shadow-sm mb-4" style="border-radius: 20px;">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <div class="bg-light rounded-3 p-3 text-center">
                                <i class="fa-solid fa-box text-success fs-3"></i>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h6 class="fw-bold mb-1">Order #12345</h6>
                            <p class="small text-muted mb-0">Placed on 12 Dec 2025</p>
                        </div>
                        <div class="col-md-3">
                            <span class="badge bg-success-light text-success rounded-pill px-3 py-2">
                                <i class="fa-solid fa-circle-check me-1"></i> Delivered
                            </span>
                        </div>
                        <div class="col-md-3 text-end">
                            <h6 class="fw-bold mb-0">₹145.00</h6>
                            <button class="btn btn-link text-success text-decoration-none small p-0" type="button" data-bs-toggle="collapse" data-bs-target="#details1">
                                View Details
                            </button>
                        </div>
                    </div>

                    <div class="collapse" id="details1">
                        <hr class="my-3 opacity-10">
                        <div class="row g-2">
                            <div class="col-6 small text-muted">Amul Toned Milk x 2</div>
                            <div class="col-6 text-end small">₹108.00</div>
                            <div class="col-6 small text-muted">Fresh Carrots (500g)</div>
                            <div class="col-6 text-end small">₹37.00</div>
                        </div>
                        <div class="d-flex gap-2 mt-4">
                            <button class="btn btn-success rounded-pill px-4 btn-sm fw-bold">Reorder</button>
                            <button class="btn btn-outline-secondary rounded-pill px-4 btn-sm fw-bold">Get Invoice</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="order-card card border-0 shadow-sm mb-4" style="border-radius: 20px;">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-2">
                            <div class="bg-light rounded-3 p-3 text-center">
                                <i class="fa-solid fa-box text-success fs-3"></i>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h6 class="fw-bold mb-1">Order #12346</h6>
                            <p class="small text-muted mb-0">Placed on 15 Dec 2025</p>
                        </div>
                        <div class="col-md-3">
                            <span class="badge bg-success-light text-success rounded-pill px-3 py-2">
                                <i class="fa-solid fa-circle-check me-1"></i> Delivered
                            </span>
                        </div>
                        <div class="col-md-3 text-end">
                            <h6 class="fw-bold mb-0">₹210.00</h6>
                            <button class="btn btn-link text-success text-decoration-none small p-0" type="button" data-bs-toggle="collapse" data-bs-target="#details2">
                                View Details
                            </button>
                        </div>
                    </div>

                    <div class="collapse" id="details2">
                        <hr class="my-3 opacity-10">
                        <div class="row g-2">
                            <div class="col-6 small text-muted">Tropicana Juice x 1</div>
                            <div class="col-6 text-end small">₹110.00</div>
                            <div class="col-6 small text-muted">Brown Bread x 2</div>
                            <div class="col-6 text-end small">₹100.00</div>
                        </div>
                        <div class="d-flex gap-2 mt-4">
                            <button class="btn btn-success rounded-pill px-4 btn-sm fw-bold">Reorder</button>
                            <button class="btn btn-outline-secondary rounded-pill px-4 btn-sm fw-bold">Get Invoice</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .bg-success-light {
        background-color: rgba(25, 135, 84, 0.1);
    }

    .order-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .order-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08) !important;
        }

    .btn-success {
        background-color: #198754 !important;
        border: none;
    }

    .btn-link:hover {
        color: #157347 !important;
    }
</style>