@model IEnumerable<PackageFoodManagementSystem.Repository.Models.Batch>

@{
    Layout = "~/Views/Shared/_StoreManagerlayout.cshtml";
}

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Batch Records</h2>

        <a asp-action="Create" asp-controller="Batch"
           class="btn shadow-sm text-white fw-bold px-4 py-2"
           style="background-color: #9c27b0; border-radius: 10px; border: none;">
            <i class="fa fa-plus-circle me-2"></i> Create New Batch
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4 py-3">Batch ID</th>
                        <th>Product Name</th>
                        <th>Manufacture Date</th>
                        <th>Expiry Date</th>
                        <th>Quantity</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">#@item.BatchId</td>
                            <td>@(item.Product?.ProductName ?? "N/A") (ID: @item.ProductId)</td>
                            <td>@item.ManufactureDate.ToString("dd MMM yyyy")</td>
                            <td>@item.ExpiryDate.ToString("dd MMM yyyy")</td>
                            <td>
                                <span class="badge @(item.Quantity < 5 ? "bg-danger" : "bg-info")" style="border-radius: 6px; padding: 6px 12px;">
                                    @item.Quantity Units
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-1">
                                    <a asp-action="Edit" asp-route-id="@item.BatchId"
                                       class="btn btn-outline-primary btn-sm" style="border-radius: 6px;" title="Edit">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.BatchId" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this batch?');" style="margin:0;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger btn-sm" style="border-radius: 6px;" title="Delete">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>