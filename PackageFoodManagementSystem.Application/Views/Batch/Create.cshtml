@model PackageFoodManagementSystem.Repository.Models.Batch

@{

    ViewData["Title"] = "Add New Batch";

    Layout = "_StoreManagerLayout";

}

<div class="container d-flex justify-content-center mt-5" style="min-height: 80vh;">
    <div class="card shadow" style="width: 100%; max-width: 450px; border-radius: 15px;">
        <div class="card-body p-4">
            <h2 class="text-center fw-bold">Add New Batch</h2>
            <p class="text-center text-muted">Enter batch details to update your inventory levels.</p>

            <form asp-action="Create" method="post">

                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Select Category</label>
                    <select id="CategoryDropdown" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">-- Select Category --</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Select Product</label>
                    <select id="ProductDropdown" asp-for="ProductId" class="form-select" disabled>
                        <option value="">-- Select Product --</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ManufactureDate" class="form-label fw-bold">Manufacture Date</label>
                    <input asp-for="ManufactureDate" type="date" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="ExpiryDate" class="form-label fw-bold">Expiry Date</label>
                    <input asp-for="ExpiryDate" type="date" class="form-control" required />
                </div>

                <div class="mb-4">
                    <label asp-for="Quantity" class="form-label fw-bold">Quantity</label>
                    <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter quantity" min="1" required />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary fw-bold" style="background-color: #9c27b0; border: none; border-radius: 8px; padding: 10px;">

                        Save Batch
                    </button>
                    <a asp-action="Index" class="btn btn-link text-decoration-none text-muted text-center">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

        $(document).ready(function () {

            // Matches the id="CategoryDropdown" added above

            $('#CategoryDropdown').change(function () {

                var selectedCategory = $(this).val();

                var $productSelect = $('#ProductDropdown');

                // Reset the product dropdown

                $productSelect.empty().append('<option value="">-- Select Product --</option>');

                if (selectedCategory) {

                    // Hits the database for fresh products like 'UncleChips'

                    $.getJSON('@Url.Action("GetProductsByCategory", "Batch")', { categoryId: selectedCategory }, function (data) {

                        if (data && data.length > 0) {

                            $productSelect.prop('disabled', false); // Enable the dropdown

                            $.each(data, function (index, item) {

                                $productSelect.append($('<option>', {

                                    value: item.productId,

                                    text: item.productName

                                }));

                            });

                        } else {

                            $productSelect.prop('disabled', true);

                        }

                    });

                } else {

                    $productSelect.prop('disabled', true);

                }

            });

        });
    </script>

}
