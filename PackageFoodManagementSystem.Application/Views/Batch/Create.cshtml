@model PackageFoodManagementSystem.Repository.Models.Batch

@{
    ViewData["Title"] = "Add New Batch";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create New Food Batch</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BatchNumber" class="form-label">Batch Number</label>
                                <input asp-for="BatchNumber" class="form-control" placeholder="e.g. BATCH-2024-001" />
                                <span asp-validation-for="BatchNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<PackageFoodManagementSystem.Repository.Models.BatchStatus>()"></select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductionDate" class="form-label">Production Date</label>
                                <input asp-for="ProductionDate" type="date" class="form-control" />
                                <span asp-validation-for="ProductionDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ExpiryDate" class="form-label">Expiry Date</label>
                                <input asp-for="ExpiryDate" type="date" class="form-control" />
                                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="InitialQuantity" class="form-label">Total Quantity</label>
                                <input asp-for="InitialQuantity" type="number" class="form-control" min="1" />
                                <span asp-validation-for="InitialQuantity" class="text-danger"></span>
                            </div>
                             <div class="col-md-6 mb-3">
                                <label class="form-label">Product ID</label>
                                <input name="ProductId" type="number" class="form-control" placeholder="Enter Product ID" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between border-top pt-3">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-success">Save Batch</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
