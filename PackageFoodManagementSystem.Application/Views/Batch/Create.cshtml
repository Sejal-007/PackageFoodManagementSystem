@model PackageFoodManagementSystem.Repository.Models.Batch

@{
    ViewData["Title"] = "Add New Batch";
    Layout = "_StoreManagerLayout";
}

<div class="container d-flex justify-content-center mt-5" style="min-height: 80vh;">
    <div class="card shadow" style="width: 100%; max-width: 450px; border-radius: 15px;">
        <div class="card-body p-4">
            <h2 class="text-center fw-bold">Add New Batch</h2>
            <p class="text-center text-muted">Enter batch details to update your inventory levels.</p>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Select Category</label>
                    <select id="CategoryDropdown" asp-for="CategoryId" class="form-select">
                        <option value="">-- Select Category --</option>
                        <option value="1">Veg & Fruits</option>
                        <option value="2">Dairy & Eggs</option>
                        <option value="3">Snacks & Drinks</option>
                        <option value="4">Meat & Fish</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Select Product</label>
                    <select id="ProductDropdown" asp-for="ProductId" class="form-select" disabled>
                        <option value="">-- Select Product --</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ManufactureDate" class="form-label fw-bold">Manufacture Date</label>
                    <input asp-for="ManufactureDate" type="date" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="ExpiryDate" class="form-label fw-bold">Expiry Date</label>
                    <input asp-for="ExpiryDate" type="date" class="form-control" required />
                </div>

                <div class="mb-4">
                    <label asp-for="Quantity" class="form-label fw-bold">Quantity</label>
                    <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter quantity" min="1" required />
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary fw-bold" style="background-color: #9c27b0; border: none; border-radius: 8px; padding: 10px;">
                        Save Batch
                    </button>
                    <a asp-action="Index" class="btn btn-link text-decoration-none text-muted text-center">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Key = CategoryId, Value = Array of { id, name }
            // Note: Update these IDs if your SQL table generated different primary keys
                    const categoryData = {
            "1": [ // Veg & Fruits
                { id: 7, name: "Sweetcorn" }, { id: 8, name: "Grapes" }, { id: 25, name: "Carrot" },
                { id: 28, name: "Brinjal" }, { id: 31, name: "Onions" }, { id: 32, name: "Apples" },
                { id: 33, name: "Pomegranate" }, { id: 34, name: "Watermelon" }
            ],
            "2": [ // Dairy & Eggs (Check your DB for these IDs)
                { id: 6, name: "Ice cream" }, { id: 9, name: "Milk" }, { id: 30, name: "Eggs" }
            ],
            "3": [ // Snacks & Drinks
                { id: 1, name: "Bingo" }, { id: 2, name: "Kinderjoy" }, { id: 3, name: "Fruit Juice" },
                { id: 4, name: "Hide and Seek" }, { id: 5, name: "Maggi" }
            ],
            "4": [ // Meat & Fish
                { id: 24, name: "Chicken" }, { id: 26, name: "Crabs" }, { id: 27, name: "Prawns" }, { id: 29, name: "Fish" }
            ]
        };

            $('#CategoryDropdown').change(function () {
                var categoryId = $(this).val();
                var productSelect = $('#ProductDropdown');

                // Reset and disable dropdown initially
                productSelect.empty().append('<option value="">-- Select Product --</option>').prop('disabled', true);

                if (categoryId && categoryData[categoryId]) {
                    productSelect.prop('disabled', false);

                    var products = categoryData[categoryId];
                    $.each(products, function (index, product) {
                        productSelect.append($('<option>', {
                            value: product.id,   // This goes to the Database (ProductId)
                            text: product.name   // This is what the User sees
                        }));
                    });
                }
            });
        });
    </script>
}