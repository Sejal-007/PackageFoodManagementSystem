@{
    ViewData["Title"] = "Compliance";

    Layout = "~/Views/Shared/_StoreManagerlayout.cshtml";

}

<!-- Header -->
<div class="topbar">
    <h4>| Store Name</h4>
    <input type="text" placeholder="Search" />
    <div class="icons">
        <a asp-controller="StoreManager" asp-action="Profile">
            👤

        </a>
    </div>
</div>


<div class="page-container">
    <h2 class="page-title">✔ Compliance Status</h2>
    <div class="compliance-cards">
        <div class="compliance-card success">
            <h3>FSSAI License</h3>
            <p>Active</p>
        </div>
        <div class="compliance-card success">
            <h3>GST Registration</h3>
            <p>Valid</p>
        </div>
        <div class="compliance-card warning">
            <h3>Fire Safety</h3>
            <p>Renew Soon</p>
        </div>
        <div class="compliance-card danger">
            <h3>Hygiene Audit</h3>
            <p>Expired</p>
        </div>
    </div>
    <div class="compliance-actions">
        <a class="btn-primary">📄 Upload Documents</a>
        <a class="btn-secondary">🔍 View Details</a>
    </div>
</div>
