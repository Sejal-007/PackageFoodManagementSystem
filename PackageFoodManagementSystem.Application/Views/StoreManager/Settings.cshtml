@{
    ViewData["Title"] = "Settings";

    Layout = "~/Views/Shared/_StoreManagerlayout.cshtml";

}
<!-- Header -->
<div class="topbar">
    <h4>| Store Name</h4>
    <input type="text" placeholder="Search" />
    <div class="icons">
        <a asp-controller="StoreManager" asp-action="Profile">
            👤

        </a>
    </div>
</div>


<div class="page-container">
    <h2 class="page-title">⚙ Store Manager Settings</h2>
    <div class="settings-cards">
        <div class="settings-card">
            <h3>👤 Account Settings</h3>
            <p>Update profile information and password</p>
            <button class="btn-primary">Edit Profile</button>
        </div>
        <div class="settings-card">
            <h3>🔔 Notifications</h3>
            <p>Manage alerts for orders and inventory</p>
            <button class="btn-secondary">Configure</button>
        </div>
        <div class="settings-card">
            <h3>🕒 Store Timings</h3>
            <p>Set store opening and closing hours</p>
            <button class="btn-secondary">Update Timings</button>
        </div>
        <div class="settings-card">
            <h3>🔐 Security</h3>
            <p>Change password and login settings</p>
            <button class="btn-secondary">Security Settings</button>
        </div>
    </div>
</div>
