@{
    ViewData["Title"] = "Inventory";

    Layout = "~/Views/Shared/_StoreManagerlayout.cshtml";

}

<!-- Header -->
<div class="topbar">
    <h4>| Store Name</h4>
    <input type="text" placeholder="Search" />
    <div class="icons">
        <a asp-controller="StoreManager" asp-action="Profile">
            👤

        </a>
    </div>
</div>


<div class="page-container">
    <h2 class="page-title">📦 Inventory Overview</h2>
    <div class="inventory-cards">
        <div class="inventory-card">
            <h3>Total Products</h3>
            <p>120</p>
        </div>
        <div class="inventory-card warning">
            <h3>Low Stock</h3>
            <p>8</p>
        </div>
        <div class="inventory-card danger">
            <h3>Out of Stock</h3>
            <p>3</p>
        </div>
    </div>
    <div class="inventory-actions">
        <a asp-controller="StoreManager1" asp-action="AddProduct" class="btn-primary">➕ Add Product</a>
        <a asp-controller="StoreManager1" asp-action="AddProduct" class="btn-secondary">📋 View All Products</a>
    </div>
</div>
